IF
  See(NearestEnemyOf(Myself),0)
  !IsAnimationID(LastMarkedObject,"""""Mummy, Histachii""""")
THEN
  RESPONSE #100
    SetBestWeapon(LastMarkedObject,3)
    AttackReevaluate(LastMarkedObject,45)
END

IF
  AttackedBy([ANYONE],0)
THEN
  RESPONSE #100
    SetBestWeapon(LastMarkedObject,3)
    AttackReevaluate(LastMarkedObject,45)
END

