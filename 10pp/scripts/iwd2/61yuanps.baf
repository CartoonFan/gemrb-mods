IF
  !TimerActive(100)
  StateCheck(Myself,STATE_POISONED)
THEN
  RESPONSE #100
    StartTimer(100,7200)
    FaceObject(Myself)
    ForceSpell(Myself,CLERIC_NEUTRALIZE_POISON)
    WaitAnimation(Myself,WALK)
    WaitAnimation(Myself,CONJURE)
    WaitAnimation(Myself,CAST)
END

IF
  !TimerActive(100)
  See([0.0.YUANTI],0)
  StateCheck(LastMarkedObject,STATE_POISONED)
THEN
  RESPONSE #100
    StartTimer(100,7200)
    FaceObject(LastMarkedObject)
    ForceSpell(LastMarkedObject,CLERIC_NEUTRALIZE_POISON)
    WaitAnimation(Myself,WALK)
    WaitAnimation(Myself,CONJURE)
    WaitAnimation(Myself,CAST)
END

IF
  !TimerActive(100)
  RandomNum(4,1)
  See([GOODCUTOFF.ANIMAL],0)
  IsAnimationID(LastMarkedObject,Snake)
THEN
  RESPONSE #100
    StartTimer(100,7200)
    FaceObject(LastMarkedObject)
    ForceSpell(LastMarkedObject,CLERIC_CHARM_PERSON_OR_MAMMAL)
    WaitAnimation(Myself,WALK)
    WaitAnimation(Myself,CONJURE)
    WaitAnimation(Myself,CAST)
END

IF
  !TimerActive(100)
  RandomNum(4,1)
  See(NearestEnemyOf(Myself),0)
  !IsAnimationID(LastMarkedObject,"""""Mummy, Histachii""""")
THEN
  RESPONSE #100
    SetMyTarget(LastMarkedObject)
    SetGlobal("UsePsionics","LOCALS",1)
    Continue()
END

