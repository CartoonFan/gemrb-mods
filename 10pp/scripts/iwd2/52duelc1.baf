  ForceMarkedSpell(MARKED_SPELL)
  SetSpellTarget([ANYONE])
  HPPercentLT("03_52Zama_06",25)  // 03_52Zama_06
  See("03_52Zama_06",0)  // 03_52Zama_06
THEN
  RESPONSE #100
