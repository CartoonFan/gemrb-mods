IF
  !Global("OTYUGH_ESCAPE","MYAREA",0)
  Global("PREFER_PC","LOCALS",0)
  Heard([ANYONE],66)
  See(LastHeardBy(Myself),0)
THEN
  RESPONSE #100
    AttackOneRound(LastSeenBy(Myself))
END

IF
  Global("PREFER_PC","LOCALS",0)
  !Global("OTYUGH_ESCAPE","MYAREA",0)
  See(NearestEnemyOf(Myself),0)
THEN
  RESPONSE #100
    SetGlobal("PREFER_PC","LOCALS",1)
    Continue()
END

IF
  Global("PREFER_PC","LOCALS",0)
  !TimerActive(4)
THEN
  RESPONSE #100
    StartRandomTimer(4,1,4)
    Shout(88)
    Continue()
END

