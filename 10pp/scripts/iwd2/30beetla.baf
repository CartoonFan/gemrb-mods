IF
  !Global("PREFER_PC","LOCALS",0)
  !See(NearestEnemyOf(Myself),0)
THEN
  RESPONSE #100
    SetGlobal("PREFER_PC","LOCALS",0)
    Continue()
END

IF
  Global("PREFER_PC","LOCALS",0)
  AttackedBy([GOODCUTOFF],0)
THEN
  RESPONSE #100
    SetGlobal("PREFER_PC","LOCALS",1)
    Continue()
END

IF
  Global("PREFER_PC","LOCALS",0)
  !Global("OTYUGH_ESCAPE","MYAREA",0)
  Or(4)
    See([0.0.OGRE],0)
    See([0.0.ORC],0)
    See([0.0.BUGBEAR],0)
    See([0.0.GOBLIN],0)
THEN
  RESPONSE #100
    Shout(88)
    EquipWeapon()
    AttackOneRound(LastMarkedObject)
END

