  !See([PC],0)
THEN
  RESPONSE #100
    EquipItem("00CIHELA",0)
    EquipItem("00CIHELB",0)
    EquipItem("00CISHLD",0)
    EquipItem("00CISHLB",0)
    EquipItem("00CWSWDB",0)
    EquipItem("00MSTR96",0)
    ChangeEnemyAlly(Myself,NEUTRAL)
END

IF
  Or(2)
    Allegiance(Myself,ENEMY)
    AttackedBy([GOODCUTOFF],0)
  See(LastAttackerOf(Myself),0)
THEN
  RESPONSE #100
    EquipWeapon()
    AttackOneRound(LastAttackerOf(Myself))
END

