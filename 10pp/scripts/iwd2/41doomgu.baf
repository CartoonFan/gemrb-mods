IF
  !Allegiance(Myself,ENEMY)
  See([PC],0)
  HasItem("41AmulHS",LastMarkedObject)  // ~Aurilite Holy Symbol~
THEN
  RESPONSE #100
    EquipItem("00CIHELA",1)
    EquipItem("00CIHELB",1)
    EquipItem("00CISHLD",1)
    EquipItem("00CISHLB",1)
    EquipItem("00CWSWDB",1)
    EquipItem("00MSTR96",1)
    Enemy()
END

IF
  !Allegiance(Myself,ENEMY)
  AttackedBy([GOODCUTOFF],0)
THEN
  RESPONSE #100
    EquipItem("00CIHELA",1)
    EquipItem("00CIHELB",1)
    EquipItem("00CISHLD",1)
    EquipItem("00CISHLB",1)
    EquipItem("00CWSWDB",1)
    EquipItem("00MSTR96",1)
    Enemy()
END

IF
  !Allegiance(Myself,ENEMY)
  Exists(Player1)
