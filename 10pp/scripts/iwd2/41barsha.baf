IF
  HasItem("00potn07",Myself)  // ~Spirit Essence~
  See([ENEMY.HUMANOID],0)
  HPPercentLT(LastSeenBy(Myself),75)
  Specifics(LastMarkedObject,254)
THEN
  RESPONSE #100
    UseItem("00potn07",LastSeenBy(Myself))  // ~Spirit Essence~
END

