    MarkSpellAndObject("11151406",Myself,7)
      // CLERIC_ARMOR_OF_FAITH
      // CLERIC_DEFENSIVE_HARMONY
    MarkSpellAndObject("11011203131313061414",LastMarkedObject,7)
      // CLERIC_BLESS
      // CLERIC_CHANT
      // CLERIC_PRAYER
      // CLERIC_PROTECTION_FROM_FIRE
      // CLERIC_RECITATION
