IF
  HaveSpell(CLERIC_ARMOR_OF_FAITH)
  Allegiance(Myself,ENEMY)
  IsSpellTargetValid(Myself,CLERIC_ARMOR_OF_FAITH,0)
THEN
  RESPONSE #100
    Spell(Myself,CLERIC_ARMOR_OF_FAITH)
    WaitAnimation(Myself,WALK)
    WaitAnimation(Myself,CONJURE)
    WaitAnimation(Myself,CAST)
END

IF
  HasItem("00potn05",Myself)  // ~Potion of Extra Healing~
  HPPercentLT(Myself,25)
THEN
  RESPONSE #100
    UseItem("00potn05",Myself)  // ~Potion of Extra Healing~
END

IF
  HasItem("00potn04",Myself)  // ~Potion of Healing~
  HPPercentLT(Myself,25)
THEN
  RESPONSE #100
    UseItem("00potn04",Myself)  // ~Potion of Healing~
END

IF
  Allegiance(Myself,ENEMY)
  HaveSpell(CLERIC_MISCAST_MAGIC)
  See([PC],0)
  IsSpellTargetValid(LastMarkedObject,CLERIC_MISCAST_MAGIC,0)
THEN
  RESPONSE #100
    ChangeSpecifics([GOODCUTOFF.0.0.0.66][0.0.10000.10000],0)
    ChangeSpecifics(LastMarkedObject,66)
    Spell(LastMarkedObject,CLERIC_MISCAST_MAGIC)
    WaitAnimation(Myself,WALK)
    WaitAnimation(Myself,CONJURE)
    WaitAnimation(Myself,CAST)
END

IF
  HasItem("CLDamag",Myself)  // ~Inflict Light Wounds~
  Allegiance(Myself,ENEMY)
  Or(2)
    See([GOODCUTOFF.0.0.0.66],0)
    See(NearestEnemyOf(Myself),0)
THEN
  RESPONSE #100
    ChangeSpecifics([GOODCUTOFF.0.0.0.66][0.0.10000.10000],0)
    ChangeSpecifics(LastMarkedObject,66)
    AttackOneRound(LastMarkedObject)
END

IF
  ForceMarkedSpell(MARKED_SPELL)
  SetSpellTarget(Nothing)
  Allegiance(Myself,ENEMY)
  Or(2)
    See([GOODCUTOFF.0.0.0.66],0)
    See(NearestEnemyOf(Myself),0)
THEN
  RESPONSE #100
    MarkSpellAndObject("23061322",LastMarkedObject,7)
      // WIZARD_HOLD_PERSON
      // CLERIC_MOLD_TOUCH
    MarkSpellAndObject("1112",Myself,7)
      // CLERIC_CAUSE_LIGHT_WOUNDS
    Continue()
  RESPONSE #100
    MarkSpellAndObject("1112",Myself,7)
      // CLERIC_CAUSE_LIGHT_WOUNDS
    MarkSpellAndObject("23061322",LastMarkedObject,7)
      // WIZARD_HOLD_PERSON
      // CLERIC_MOLD_TOUCH
    Continue()
END

IF
  !IsMarkedSpell(MARKED_SPELL)
THEN
  RESPONSE #100
    ChangeSpecifics([GOODCUTOFF.0.0.0.66][0.0.10000.10000],0)
    ChangeSpecifics(LastMarkedObject,66)
    Spell(SpellTarget,MARKED_SPELL)
    WaitAnimation(Myself,WALK)
    WaitAnimation(Myself,CONJURE)
    WaitAnimation(Myself,CAST)
    ForceMarkedSpell(MARKED_SPELL)
END

IF
  Allegiance(Myself,ENEMY)
  Or(2)
    See([GOODCUTOFF.0.0.0.66],0)
    See(NearestEnemyOf(Myself),0)
THEN
  RESPONSE #100
    ChangeSpecifics([GOODCUTOFF.0.0.0.66][0.0.10000.10000],0)
    ChangeSpecifics(LastMarkedObject,66)
    EquipWeapon()
    AttackOneRound(LastMarkedObject)
END

