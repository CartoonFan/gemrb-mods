IF
  !TimerActive(50)
  OpenState("AR6051_Blades4",TRUE)  // AR6051_Blades4
THEN
  RESPONSE #100
    CloseDoor("AR6051_Blades4")
    StartTimer(50,3)
END

IF
  !TimerActive(50)
  Entered([PC])
THEN
  RESPONSE #100
    OpenDoor("AR6051_Blades4")
    ForceSpell(LastTrigger,TRAP_FLOOR_BLADES)
    DisplayMessage(14381)  // ~Trap Sprung~ [AMB_D05C]
    StartTimer(50,3)
END

