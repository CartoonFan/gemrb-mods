IF
  Global("60PEDES2_Take_Stele","MYAREA",0)
  PartyHasItem("60Stele2")  // ~Religious Stele~
  OpenState("AR6050_IntPillar2",FALSE)  // AR6050_IntPillar2
THEN
  RESPONSE #100
    SetGlobal("60PEDES2_Take_Stele","MYAREA",1)
    TakePartyItem("60Stele2")
    IncrementGlobal("Chult_Pedestals","GLOBAL",1)
    Unlock(Myself)
    CloseDoor(Myself)
END

IF
  Clicked([PC])
THEN
  RESPONSE #100
END

