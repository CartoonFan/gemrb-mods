  SetSpellTarget(Nothing)
  See([PC],0)
  Allegiance(Myself,ENEMY)
  Range(LastMarkedObject,3,GREATER_THAN)
THEN
  RESPONSE #100
    MarkSpellAndObject("11021117132214102501",LastMarkedObject,7)
      // CLERIC_COMMAND
      // CLERIC_FROST_FINGERS
      // CLERIC_MOLD_TOUCH
      // CLERIC_GIANT_INSECT
      // WIZARD_ANIMATE_DEAD
    MarkSpellAndObject("1101",Myself,7)
      // CLERIC_BLESS
    Continue()
  RESPONSE #100
    MarkSpellAndObject("1101",Myself,7)
      // CLERIC_BLESS
    MarkSpellAndObject("11021117132214102501",LastMarkedObject,7)
      // CLERIC_COMMAND
      // CLERIC_FROST_FINGERS
      // CLERIC_MOLD_TOUCH
