IF
  HaveSpell(CLERIC_SILENCE_15_RADIUS)
  See(FarthestEnemyOf(Myself),0)
  IsSpellTargetValid(LastMarkedObject,CLERIC_SILENCE_15_RADIUS,0)
  Allegiance(Myself,ENEMY)
  RandomNum(2,1)
  Or(5)
    LevelInClassGT(LastMarkedObject,3,BARD)
    LevelInClassGT(LastMarkedObject,3,CLERIC)
    LevelInClassGT(LastMarkedObject,3,DRUID)
    LevelInClassGT(LastMarkedObject,3,SORCERER)
    LevelInClassGT(LastMarkedObject,3,MAGE)
  Range(LastMarkedObject,9,GREATER_THAN)
THEN
  RESPONSE #100
    Spell(LastMarkedObject,CLERIC_SILENCE_15_RADIUS)
    WaitAnimation(Myself,WALK)
    WaitAnimation(Myself,CONJURE)
    WaitAnimation(Myself,CAST)
END

IF
  Or(2)
    HasItem("CMDamag",Myself)  // ~Inflict Moderate Wounds~
    HasItem("IBlade",Myself)  // ~Ice Blade~
  See(NearestEnemyOf(Myself),0)
  Allegiance(Myself,ENEMY)
  RandomNum(2,1)
  Range(LastMarkedObject,4,LESS_THAN)
THEN
  RESPONSE #100
    AttackOneRound(LastMarkedObject)
END

IF
  ForceMarkedSpell(MARKED_SPELL)
  SetSpellTarget(Nothing)
  See(NearestEnemyOf(Myself),0)
  Allegiance(Myself,ENEMY)
  RandomNum(2,1)
  Range(LastMarkedObject,4,LESS_THAN)
THEN
  RESPONSE #100
    MarkSpellAndObject("131912181428",Myself,7)
      // CLERIC_CIRCLE_OF_BONES
      // CLERIC_CAUSE_MODERATE_WOUNDS
      // CLERIC_ICE_BLADE
    MarkSpellAndObject("1117",LastMarkedObject,7)
      // CLERIC_FROST_FINGERS
    Continue()
  RESPONSE #100
    MarkSpellAndObject("1117",LastMarkedObject,7)
      // CLERIC_FROST_FINGERS
    MarkSpellAndObject("131912181428",Myself,7)
      // CLERIC_CIRCLE_OF_BONES
      // CLERIC_CAUSE_MODERATE_WOUNDS
      // CLERIC_ICE_BLADE
    Continue()
END

