IF
  !CreatureHidden(Myself)
THEN
  RESPONSE #100
    ChangeCurrentScript("EFFOLPTY")
END

IF
  !Global("SAW_PC","LOCALS",0)
  !See([PC])
THEN
  RESPONSE #100
    HideCreature(Myself,FALSE)
END

IF
  Global("SAW_PC","LOCALS",0)
  See([PC])
THEN
  RESPONSE #100
    SetGlobal("SAW_PC","LOCALS",1)
END

IF
  True()
THEN
  RESPONSE #100
    NoAction()
END

