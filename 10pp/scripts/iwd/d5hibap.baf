    Wait(2)
END

IF
  Global("SPELL_PHASE","LOCALS",2)
  See(NearestEnemyOf(Myself))
THEN
  RESPONSE #100
    AttackReevaluate(LastSeenBy(Myself),75)
END

IF
  !Allegiance(Myself,ENEMY)
  AttackedBy([GOODCUTOFF],DEFAULT)
THEN
  RESPONSE #100
    Enemy()
    Continue()
END

IF
  NumberOfTimesTalkedTo(0)
  See([PC])
  !Allegiance(Myself,ENEMY)
  !Dead("yself)")  // yself)
THEN
  RESPONSE #100
    StartCutSceneMode()
    ClearAllActions()
    SetDialogueRange(300)
    MultiPlayerSync()
    Dialogue([PC])
END

IF
  AttackedBy([GOODCUTOFF],DEFAULT)
THEN
  RESPONSE #100
    MoveToObject(LastAttackerOf(Myself))
END

IF
  !BitGlobal("MYAREA:AREA_VAR","",4,AND)
  !Global("YXUN_ATTACK","MYAREA",0)
THEN
  RESPONSE #100
    BitGlobal("MYAREA:AREA_VAR","",4,OR)
END

IF
  !Allegiance(Myself,ENEMY)
  Global("BAPTISM_PHASE","LOCALS",0)
THEN
  RESPONSE #100
    MoveToObject("CAPTIVEVILLAGER1A")
    FloatMessage(Myself,11595)  // ~"In the name of Sseth and Yxunomei, I consecrate you for their dark blessing."~
    ReallyForceSpell("CAPTIVEVILLAGER1A",INNATE_D5_HIGH_BAPTISM)
    Wait(2)
    IncrementGlobal("BAPTISM_PHASE","LOCALS",1)
END

