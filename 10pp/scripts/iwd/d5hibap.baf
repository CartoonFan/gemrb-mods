IF
  !BitGlobal("MYAREA:AREA_VAR","",4,AND)
  Allegiance(Myself,ENEMY)
THEN
  RESPONSE #100
    BitGlobal("MYAREA:AREA_VAR","",4,OR)
    Continue()
END

IF
  See(NearestEnemyOf(Myself))
  Global("SPELL_PHASE","LOCALS",0)
  BitGlobal("MYAREA:AREA_VAR","",4,AND)
THEN
  RESPONSE #100
    SetGlobal("SPELL_PHASE","LOCALS",1)
    Spell(LastSeenBy(Myself),CLERIC_STATIC_CHARGE)
    Wait(2)
END

IF
  See(NearestEnemyOf(Myself))
  Global("SPELL_PHASE","LOCALS",1)
THEN
  RESPONSE #100
    SetGlobal("SPELL_PHASE","LOCALS",2)
    Spell(LastSeenBy(Myself),CLERIC_HOLD_PERSON)
    Wait(2)
  RESPONSE #100
    SetGlobal("SPELL_PHASE","LOCALS",2)
    Spell(LastSeenBy(Myself),CLERIC_STATIC_CHARGE)
    Wait(2)
  RESPONSE #100
    SetGlobal("SPELL_PHASE","LOCALS",2)
    Spell(LastSeenBy(Myself),CLERIC_DISPEL_MAGIC)
    Wait(2)
  RESPONSE #100
    SetGlobal("SPELL_PHASE","LOCALS",2)
    Spell(Myself,CLERIC_STRENGTH_OF_ONE)
    Wait(2)
END

IF
  See(NearestEnemyOf(Myself))
  !StateCheck(LastSeenBy(Myself),STATE_HELPLESS)
  Global("SPELL_PHASE","LOCALS",2)
THEN
  RESPONSE #100
    Spell(LastSeenBy(Myself),CLERIC_HOLD_PERSON)
    Wait(2)
END

IF
  See(NearestEnemyOf(Myself))
  Global("SPELL_PHASE","LOCALS",2)
THEN
  RESPONSE #100
