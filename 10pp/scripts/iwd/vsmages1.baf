IF
  HaveSpell(WIZARD_STINKING_CLOUD)
  See(NearestEnemyOf(Myself))
THEN
  RESPONSE #100
    Spell(LastSeenBy(Myself),WIZARD_STINKING_CLOUD)
    Wait(2)
END

