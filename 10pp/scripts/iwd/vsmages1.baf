IF
  True()
THEN
  RESPONSE #100
    SetGlobal("LOCAL_CAST_SPELL","LOCALS",0)
    Continue()
  RESPONSE #100
    SetGlobal("LOCAL_CAST_SPELL","LOCALS",1)
    Continue()
  RESPONSE #100
    SetGlobal("LOCAL_CAST_SPELL","LOCALS",2)
    Continue()
END

IF
  HaveSpell(WIZARD_HOLD_PERSON)
  GlobalLT("LOCAL_CAST_SPELL","LOCALS",1)
  Or(2)
    See(NearestEnemyOf(Myself))
    See([PC.0.0.FIGHTER])
  !StateCheck(LastSeenBy(Myself),STATE_HELPLESS)
  !BitGlobal("LOCALS:CREATURE_STATE_VAR","",8,AND)
  Allegiance(Myself,ENEMY)
THEN
  RESPONSE #100
    BitGlobal("LOCALS:CREATURE_STATE_VAR","",8,OR)
    Spell(LastSeenBy(Myself),WIZARD_HOLD_PERSON)
    Wait(2)
END

