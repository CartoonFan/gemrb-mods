IF
  HasItem("POTN08",Myself)  // ~Potion of Healing~
  HPPercentLT(Myself,50)
THEN
  RESPONSE #100
    UseItem("POTN08",Myself)  // ~Potion of Healing~
    Continue()
END

IF
  HasItem("EXTHEAL",Myself)  // ~Potion of Extra Healing~
  HPPercentLT(Myself,50)
THEN
  RESPONSE #100
    UseItem("EXTHEAL",Myself)  // ~Potion of Extra Healing~
    Continue()
END

IF
  Allegiance(Myself,ENEMY)
  Or(6)
    See(NearestEnemyOf(Myself))
    See([PC.0.0.PALADIN_ALL])
    See([PC.0.0.THIEF_ALL])
    See([PC.0.0.BARD_ALL])
    See([PC.0.0.CLERIC_ALL])
    See([PC.0.0.MAGE_ALL])
THEN
  RESPONSE #100
    SetBestWeapon(LastSeenBy(Myself),4)
    AttackReevaluate(LastSeenBy(Myself),45)
END

IF
  Allegiance(Myself,ENEMY)
  Or(6)
    AttackedBy(NearestEnemyOf(Myself),DEFAULT)
    AttackedBy([PC.0.0.PALADIN_ALL],DEFAULT)
    AttackedBy([PC.0.0.THIEF_ALL],DEFAULT)
    AttackedBy([PC.0.0.BARD_ALL],DEFAULT)
    AttackedBy([PC.0.0.CLERIC_ALL],DEFAULT)
    AttackedBy([PC.0.0.MAGE_ALL],DEFAULT)
THEN
  RESPONSE #100
    MoveToObject(LastAttackerOf(Myself))
END

IF
  HelpEX(Myself,RACE)
THEN
  RESPONSE #100
    MoveToObject(NearestEnemyOf(LastHelp(Myself)))
END

IF
  AttackedBy([GOODCUTOFF],DEFAULT)
THEN
  RESPONSE #100
    Enemy()
    Continue()
END

