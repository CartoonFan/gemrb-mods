IF
  !BitGlobal("LOCALS:CREATURE_STATE_VAR","",1,AND)
THEN
  RESPONSE #100
    BitGlobal("LOCALS:CREATURE_STATE_VAR","",1,OR)
    StartRandomTimer(24,4,8)
    Continue()
END

IF
  !TimerActive(24)
THEN
  RESPONSE #100
    FloatMessage(Myself,18060)  // ~"AAAAAAGH!"~
    StartRandomTimer(24,4,8)
    Continue()
  RESPONSE #100
    FloatMessage(Myself,18061)  // ~"For Tempos!"~
    StartRandomTimer(24,4,8)
    Continue()
  RESPONSE #100
    FloatMessage(Myself,18066)  // ~"Blood and death!"~
    StartRandomTimer(24,4,8)
    Continue()
  RESPONSE #100
    FloatMessage(Myself,18067)  // ~"I shall join my kin in glorious death!"~
    StartRandomTimer(24,4,8)
    Continue()
END

IF
  See(NearestEnemyOf(Myself))
THEN
  RESPONSE #100
    AttackReevaluate(LastSeenBy(Myself),75)
END

IF
  AttackedBy(NearestEnemyOf(Myself),DEFAULT)
THEN
  RESPONSE #100
    AttackReevaluate(LastAttackerOf(Myself),75)
END

IF
  ActionListEmpty()
  !TargetUnreachable(NearestEnemyOf(Myself))
THEN
  RESPONSE #100
    MoveToObject(NearestEnemyOf(Myself))
END

