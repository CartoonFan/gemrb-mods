IF
  See(NearestEnemyOf(Myself))
THEN
  RESPONSE #100
    AttackReevaluate(NearestEnemyOf(Myself),45)
END

IF
  AttackedBy([ANYONE],DEFAULT)
THEN
  RESPONSE #100
    Enemy()
    SetGlobal("Throne_Room_Attack","AR4001",1)
    AttackReevaluate(LastAttackerOf(Myself),45)
END

IF
  Global("Throne_Room_Attack","AR4001",1)
THEN
  RESPONSE #100
    MoveToObject("Lizard_King")
END

