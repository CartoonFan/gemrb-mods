IF
  HaveSpell(WIZARD_MIRROR_IMAGE)
  See(NearestEnemyOf(Myself))
THEN
  RESPONSE #100
    Spell(Myself,WIZARD_MIRROR_IMAGE)
    Wait(2)
END

IF
  HaveSpell(WIZARD_CLOUDKILL)
  Range(SecondNearestEnemyOf(Myself),98)
  See(NearestEnemyOf(Myself))
THEN
  RESPONSE #100
    SpellPoint([3000.2420],WIZARD_CLOUDKILL)
    Wait(2)
END

