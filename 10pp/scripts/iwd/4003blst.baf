IF
  !BitGlobal("LOCALS:CREATURE_STATE_VAR","",512,AND)
  HPPercentLT(Myself,100)
  !Dead("YSELF)")  // YSELF)
THEN
  RESPONSE #100
    BitGlobal("LOCALS:CREATURE_STATE_VAR","",512,OR)
    ReallyForceSpell(Myself,WIZARD_SNILLOCS_SNOWBALL_SWARM)
    AddXPVar("BLAST_SKEL_VAL",0)  // ~Beetle~
    Kill(Myself)
END

IF
  BitGlobal("LOCALS:CREATURE_STATE_VAR","",512,AND)
THEN
