IF
  Global("RUN_FROM","LOCALS",0)
  AttackedBy([GOODCUTOFF],DEFAULT)
  OnIsland(LastAttackerOf(Myself))
THEN
  RESPONSE #100
    SetGlobal("RUN_FROM","LOCALS",1)
    Continue()
END

IF
  !Global("9300_ON_ISLAND","GLOBAL",0)
  See(NearestEnemyOf(Myself))
  !OnIsland(LastSeenBy(Myself))
THEN
  RESPONSE #100
    Help()
    AttackReevaluate(LastSeenBy(Myself),75)
END

IF
  !Global("9300_ON_ISLAND","GLOBAL",0)
  !Global("RUN_FROM","LOCALS",0)
  See([PC])
THEN
  RESPONSE #100
    RunAwayFromNoLeaveArea(LastSeenBy(Myself),45)
END

IF
  !Global("9300_ON_ISLAND","GLOBAL",0)
  See(NearestEnemyOf(Myself))
  OnIsland(LastSeenBy(Myself))
  ActionListEmpty()
THEN
  RESPONSE #100
    FaceObject(LastSeenBy(Myself))
    WaitRandom(1,3)
  RESPONSE #100
    RandomWalk()
    WaitRandom(2,4)
END

IF
  !Global("9300_ON_ISLAND","GLOBAL",0)
  Global("RUN_FROM","LOCALS",0)
  ActionListEmpty()
THEN
  RESPONSE #100
    ReturnToSavedLocation()
END

IF
  !Global("9300_ON_ISLAND","GLOBAL",0)
THEN
  RESPONSE #100
    NoAction()
END

IF
  !Global("RUN_FROM","LOCALS",0)
THEN
  RESPONSE #100
    SetGlobal("RUN_FROM","LOCALS",0)
    Continue()
END

