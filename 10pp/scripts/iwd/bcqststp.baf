IF
  !GlobalGT("HJOLLDER_QUEST","GLOBAL",10)
  AttackedBy([GOODCUTOFF],DEFAULT)
THEN
  RESPONSE #100
    SetGlobal("BARBARIAN_CAMP_HOSTILE","GLOBAL",1)
    Enemy()
END

IF
  !GlobalGT("HJOLLDER_QUEST","GLOBAL",10)
  Global("BARBARIAN_CAMP_HOSTILE","GLOBAL",0)
THEN
  RESPONSE #100
    NoAction()
END

IF
  !Global("BARBARIAN_CAMP_HOSTILE","GLOBAL",0)
THEN
  RESPONSE #100
    Enemy()
    Continue()
END

IF
  !See([PC])
THEN
  RESPONSE #100
    ChangeCurrentScript("")
END

