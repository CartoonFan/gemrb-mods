IF
  !BitGlobal("MYAREA:AREA_VAR","",8,AND)
  Range(NearestEnemyOf(Myself),3)
THEN
  RESPONSE #100
    BitGlobal("MYAREA:AREA_VAR","",8,OR)
    Continue()
END

IF
  !BitGlobal("LOCALS:CREATURE_STATE_VAR","",4,AND)
  BitGlobal("MYAREA:AREA_VAR","",8,AND)
THEN
  RESPONSE #100
    BitGlobal("LOCALS:CREATURE_STATE_VAR","",4,AND)
    SetSavedLocationPoint(782,694,E)
    SetStartPos([782.694])
    ReturnToSavedLocation()
    Face(E)
    Continue()
END

IF
  See(NearestEnemyOf(Myself))
THEN
  RESPONSE #100
    EquipRanged()
    Help()
    AttackReevaluate(LastSeenBy(Myself),45)
END

IF
  AttackedBy(NearestEnemyOf(Myself),DEFAULT)
THEN
  RESPONSE #100
    FaceObject(LastAttackerOf(Myself))
    Continue()
END

IF
  BitGlobal("MYAREA:AREA_VAR","",8,AND)
  See(NearestEnemyOf(Myself))
THEN
  RESPONSE #100
    AttackReevaluate(LastSeenBy(Myself),75)
END

