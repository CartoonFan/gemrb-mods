IF
  Global("AR9500_ENCOUNTER","GLOBAL",0)
THEN
  RESPONSE #100
    SetGlobal("AR9500_ENCOUNTER","GLOBAL",1)
    Continue()
  RESPONSE #100
    SetGlobal("AR9500_ENCOUNTER","GLOBAL",2)
    Continue()
  RESPONSE #100
    SetGlobal("AR9500_ENCOUNTER","GLOBAL",3)
    Continue()
END

