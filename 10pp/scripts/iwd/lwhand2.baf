IF
  !BitGlobal("LOCALS:CREATURE_STATE_VAR","",1,AND)
THEN
  RESPONSE #100
    BitGlobal("LOCALS:CREATURE_STATE_VAR","",1,OR)
    StartRandomTimer(24,5,10)
    Continue()
END

IF
  !TimerActive(24)
THEN
  RESPONSE #25
    FloatMessage(Myself,17908)  // ~"Load the wagons... offload the wagons..."~
    StartRandomTimer(24,5,10)
    Continue()
  RESPONSE #25
    FloatMessage(Myself,17909)  // ~"I'm getting too old for this."~
    StartRandomTimer(24,5,10)
    Continue()
  RESPONSE #25
    FloatMessage(Myself,17910)  // ~"Wonder how long we'll be staying in this hole?" ~
    StartRandomTimer(24,5,10)
    Continue()
  RESPONSE #25
    FloatMessage(Myself,17911)  // ~"I wish we were back on the road."~
    StartRandomTimer(24,5,10)
    Continue()
  RESPONSE #375
    StartRandomTimer(24,5,10)
    Continue()
END

IF
  !Allegiance(Myself,ENEMY)
  See([ENEMY])
THEN
  RESPONSE #100
    RunAwayFromNoLeaveArea(LastSeenBy(Myself),45)
END

