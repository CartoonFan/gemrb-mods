IF
  CreatureHidden(Myself)
  !Global("MAP_GROUP_HOSTILE1","MYAREA",0)
  !Global("LYSAN_DEAD","GLOBAL",0)
THEN
  RESPONSE #100
    Wait(1)
    HideCreature(Myself,FALSE)
    Wait(1)
    FloatMessage(Myself,3801)  // ~"We are free."~
    Wait(3)
    DestroySelf()
END

IF
  True()
THEN
  RESPONSE #100
    MoveToObject("LYSAN")
END

