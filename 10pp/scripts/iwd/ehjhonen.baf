IF
  !BitGlobal("LOCALS:CREATURE_STATE_VAR","",1,AND)
THEN
  RESPONSE #100
    BitGlobal("LOCALS:CREATURE_STATE_VAR","",1,OR)
    StartTimer(24,5)
    Continue()
END

IF
  GlobalLT("SIREN_QUEST","GLOBAL",3)
  !TimerActive(24)
  Global("FLOAT_0_LINE_INDEX","LOCALS",0)
THEN
  RESPONSE #100
    FloatMessage(Myself,3802)  // ~"Hmmnnn..."~
    IncrementGlobal("FLOAT_0_LINE_INDEX","LOCALS",1)
    StartTimer(24,5)
    Continue()
  RESPONSE #0
    IncrementGlobal("FLOAT_0_LINE_INDEX","LOCALS",1)
    StartTimer(24,5)
    Continue()
END

IF
  GlobalLT("SIREN_QUEST","GLOBAL",3)
  !TimerActive(24)
  Global("FLOAT_0_LINE_INDEX","LOCALS",1)
THEN
  RESPONSE #100
    FloatMessage(Myself,3804)  // ~"How does that damn song go?"~
    IncrementGlobal("FLOAT_0_LINE_INDEX","LOCALS",1)
    StartTimer(24,5)
    Continue()
  RESPONSE #0
    IncrementGlobal("FLOAT_0_LINE_INDEX","LOCALS",1)
