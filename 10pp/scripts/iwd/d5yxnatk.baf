IF
  Global("YXUN_ATTACK","MYAREA",0)
  AttackedBy([GOODCUTOFF],DEFAULT)
THEN
  RESPONSE #100
    SetGlobal("YXUN_ATTACK","MYAREA",1)
END

IF
  !Global("YXUN_ATTACK","MYAREA",0)
  !See([PC])
  ActionListEmpty()
THEN
  RESPONSE #100
    MoveToObject([PC][0.0.10000.10000])
END

IF
  Global("YXUN_ATTACK","MYAREA",0)
THEN
  RESPONSE #100
    NoAction()
END

