IF
  HaveSpell(CLERIC_SILENCE_15_RADIUS)
  See(NearestEnemyOf(Myself))
THEN
  RESPONSE #100
    Spell(NearestEnemyOf(Myself),CLERIC_SILENCE_15_RADIUS)
    Wait(3)
END

