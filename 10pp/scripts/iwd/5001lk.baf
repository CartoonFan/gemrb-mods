IF
  OnCreation()
THEN
  RESPONSE #100
    SetInternal(Myself,0,0)
END

IF
  Die()
THEN
  RESPONSE #100
    SetGlobal("LKingDead","GLOBAL",1)
END

IF
  Internal(Myself,0,0)
  Allegiance(Myself,ENEMY)
THEN
  RESPONSE #100
    SetInternal(Myself,0,1)
    Continue()
END

IF
  See(NearestEnemyOf(Myself))
THEN
  RESPONSE #100
    Attack(NearestEnemyOf(Myself))
END

IF
  AttackedBy([PC],DEFAULT)
THEN
  RESPONSE #100
    Enemy()
    Attack(NearestEnemyOf(Myself))
END

