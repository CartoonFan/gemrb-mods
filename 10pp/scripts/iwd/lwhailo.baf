IF
  Global("MOVE_HAILEE","GLOBAL",1)
THEN
  RESPONSE #100
    EscapeArea()
END

IF
  !BitGlobal("LOCALS:CREATURE_STATE_VAR","",1,AND)
THEN
  RESPONSE #100
    BitGlobal("LOCALS:CREATURE_STATE_VAR","",1,OR)
    StartRandomTimer(24,5,10)
    Continue()
END

IF
  Global("MOVE_HAILEE","GLOBAL",2)
THEN
  RESPONSE #100
    DestroySelf()
END

IF
  GlobalLT("HAILEE_JOKE","GLOBAL",4)
  !TimerActive(24)
THEN
  RESPONSE #75
    FloatMessage(Myself,14334)  // ~"HELP!"~
    StartRandomTimer(24,5,10)
    Continue()
  RESPONSE #75
    FloatMessage(Myself,17901)  // ~"Someone help me, PLEASE!"~
    StartRandomTimer(24,5,10)
    Continue()
  RESPONSE #75
    FloatMessage(Myself,17902)  // ~"My poor brother.  He's gonna DIE!"~
    StartRandomTimer(24,5,10)
    Continue()
  RESPONSE #75
    FloatMessage(Myself,24588)  // ~"Help!  Please, someone get help!"~
    StartRandomTimer(24,5,10)
    Continue()
  RESPONSE #75
    FloatMessage(Myself,24589)  // ~"My brother's stuck in the well!"~
    StartRandomTimer(24,5,10)
    Continue()
  RESPONSE #75
    FloatMessage(Myself,24590)  // ~"Anyone!  Please help!"~
    StartRandomTimer(24,5,10)
    Continue()
  RESPONSE #175
    StartRandomTimer(24,5,10)
    Continue()
END

IF
  GlobalGT("HAILEE_JOKE","GLOBAL",3)
  !TimerActive(24)
THEN
  RESPONSE #50
    FloatMessage(Myself,24591)  // ~"Want to throw briarcones at Purvis?"~
    StartRandomTimer(24,5,10)
    Continue()
  RESPONSE #50
    FloatMessage(Myself,24100)  // ~"As soon as Purvis comes out of his shack, I'm gonna hit him with stones."~
    StartRandomTimer(24,5,10)
    Continue()
  RESPONSE #150
    StartRandomTimer(24,5,10)
    Continue()
END

IF
  !Allegiance(Myself,ENEMY)
  See([ENEMY])
THEN
  RESPONSE #100
    RunAwayFromNoLeaveArea(LastSeenBy(Myself),45)
END

