IF
  Opened([ANYTHING])
  !BitGlobal("MYAREA:AREA_GROUP_VAR","",1,AND)
THEN
  RESPONSE #100
    OpenDoor("AR5404DOOR1")
    OpenDoor("AR5404DOOR2")
    OpenDoor("AR5404DOOR3")
    BitGlobal("MYAREA:AREA_GROUP_VAR","",1,OR)
END

IF
  Unlocked([ANYTHING])
  !BitGlobal("MYAREA:AREA_GROUP_VAR","",1,AND)
THEN
  RESPONSE #100
    OpenDoor("AR5404DOOR1")
    OpenDoor("AR5404DOOR2")
    OpenDoor("AR5404DOOR3")
    BitGlobal("MYAREA:AREA_GROUP_VAR","",1,OR)
END

