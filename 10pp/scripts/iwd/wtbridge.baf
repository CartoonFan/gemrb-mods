IF
  OnCreation()
  BitGlobal("LOCALS:CREATURE_STATE_VAR","",256,AND)
  Global("BRIDGE_FIXED","MYAREA",0)
THEN
  RESPONSE #100
    BitGlobal("LOCALS:CREATURE_STATE_VAR","",256,XOR)
    Continue()
END

IF
  Global("BRIDGE_FIXED","MYAREA",0)
  PartyHasItem("BOOKENG")  // ~Engineering Manual~
  Entered([PC])
THEN
  RESPONSE #100
    TakePartyItem("BOOKENG")
    OpenDoor("AR7005BRIDGE")
    AddXPVar("LEVEL_10_EASY",9238)  // ~The bridge is in poor shape but you manage to repair it using the engineering manual.~
    SetGlobal("BRIDGE_FIXED","MYAREA",1)
END

IF
  Global("BRIDGE_FIXED","MYAREA",0)
  PartyHasItem("BOOKENG")  // ~Engineering Manual~
  Opened([PC])
THEN
  RESPONSE #100
    TakePartyItem("BOOKENG")
    OpenDoor("AR7005BRIDGE")
    AddXPVar("LEVEL_10_EASY",9238)  // ~The bridge is in poor shape but you manage to repair it using the engineering manual.~
    SetGlobal("BRIDGE_FIXED","MYAREA",1)
END

IF
  Global("BRIDGE_FIXED","MYAREA",0)
  !BitGlobal("LOCALS:CREATURE_STATE_VAR","",256,AND)
  Entered([PC])
THEN
  RESPONSE #100
    BitGlobal("LOCALS:CREATURE_STATE_VAR","",256,OR)
    DisplayString(Myself,14227)  // ~The bridge is in poor shape and may collapse. You cannot cross it.~
    SetGlobal("BRIDGE_BROKEN","GLOBAL",1)
END

IF
  Global("BRIDGE_FIXED","MYAREA",0)
  !BitGlobal("LOCALS:CREATURE_STATE_VAR","",256,AND)
  Opened([PC])
THEN
  RESPONSE #100
    BitGlobal("LOCALS:CREATURE_STATE_VAR","",256,OR)
    DisplayString(Myself,14227)  // ~The bridge is in poor shape and may collapse. You cannot cross it.~
    SetGlobal("BRIDGE_BROKEN","GLOBAL",1)
END

