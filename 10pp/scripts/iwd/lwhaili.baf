IF
  !BitGlobal("LOCALS:CREATURE_STATE_VAR","",1,AND)
THEN
  RESPONSE #100
    BitGlobal("LOCALS:CREATURE_STATE_VAR","",1,OR)
    StartRandomTimer(24,5,10)
    Continue()
END

IF
  CreatureHidden(Myself)
  Global("MOVE_HAILEE","GLOBAL",1)
THEN
  RESPONSE #100
    SetGlobal("MOVE_HAILEE","GLOBAL",2)
    HideCreature(Myself,FALSE)
    Continue()
END

IF
  CreatureHidden(Myself)
THEN
  RESPONSE #100
    NoAction()
END

IF
  Global("HAILEE_HOME","GLOBAL",1)
  !TimerActive(24)
THEN
  RESPONSE #25
    FloatMessage(Myself,24101)  // ~"Is there a bear outside?"~
    StartRandomTimer(24,5,10)
    Continue()
  RESPONSE #150
    StartRandomTimer(24,5,10)
    Continue()
END

