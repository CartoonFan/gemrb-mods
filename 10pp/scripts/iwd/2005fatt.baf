IF
  OnCreation()
THEN
  RESPONSE #100
    SetInternal(Myself,0,0)
END

IF
  Internal(Myself,0,0)
  See(NearestEnemyOf(Myself))
THEN
  RESPONSE #100
    FloatMessage(Myself,1819)  // ~"Get them!  Get food from humans!"~
    Attack(NearestEnemyOf(Myself))
    SetInternal(Myself,0,1)
END

IF
  See(NearestEnemyOf(Myself))
THEN
  RESPONSE #100
    Attack(NearestEnemyOf(Myself))
END

IF
  AttackedBy([PC],DEFAULT)
THEN
  RESPONSE #100
    Attack(LastAttackerOf(Myself))
END

