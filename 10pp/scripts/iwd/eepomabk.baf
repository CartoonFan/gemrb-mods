IF
  Global("POMAB_IMAGES_DEAD","MYAREA",0)
  !GlobalLT("FAKE_POMAB_DEAD","GLOBAL",5)
THEN
  RESPONSE #100
    FaceObject([PC][0.0.10000.10000])
    FloatMessage(Myself,17697)  // ~"No!  This cannot be!  Stay Back!"~
    Wait(1)
    SetHP(Myself,25)
    SetGlobal("POMAB_IMAGES_DEAD","MYAREA",1)
    Continue()
END

IF
  !Global("POMAB_IMAGES_DEAD","MYAREA",0)
  See(NearestEnemyOf(Myself))
THEN
  RESPONSE #100
    RunAwayFromNoLeaveArea(LastSeenBy(Myself),45)
END

IF
  !Global("POMAB_IMAGES_DEAD","MYAREA",0)
THEN
  RESPONSE #100
    NoAction()
END

