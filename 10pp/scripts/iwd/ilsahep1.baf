IF
  HaveSpell(CLERIC_CAUSE_MODERATE_WOUNDS)
  !Dead("YSELF)")  // YSELF)
  HPPercentLT(Myself,75)
  Allegiance(Myself,ENEMY)
THEN
  RESPONSE #100
    Spell(Myself,CLERIC_CAUSE_MODERATE_WOUNDS)
    Wait(3)
    Continue()
END

IF
