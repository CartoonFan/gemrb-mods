  HPPercentLT(LastSeenBy(Myself),75)
  Allegiance(Myself,ENEMY)
THEN
  RESPONSE #100
    Spell(LastSeenBy(Myself),CLERIC_CAUSE_MODERATE_WOUNDS)
    Wait(3)
    Continue()
END

