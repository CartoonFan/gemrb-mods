IF
  HPGT(Myself,3000)
THEN
  RESPONSE #100
    SetHP(Myself,3000)
    Continue()
END

IF
  Global("KILL_FAKE_POMAB","GLOBAL",0)
  HPLT(Myself,3000)
THEN
  RESPONSE #100
    SetGlobal("KILL_FAKE_POMAB","GLOBAL",1)
    ClearActions(LastAttackerOf(Myself))
    Continue()
END

IF
  GlobalLT("FAKE_POMAB_DEAD","GLOBAL",5)
  HPLT(Myself,3000)
THEN
  RESPONSE #100
    SetHP(Myself,3000)
    JumpToPoint([211.509])
  RESPONSE #100
