IF
  GlobalLT("SHOTS_FIRED","LOCALS",100)
  GlobalTimerExpired("POMAB_SHOOT","MYAREA")
  See(NearestEnemyOf(Myself))
THEN
  RESPONSE #60
    SetGlobalTimer("POMAB_SHOOT","MYAREA",3)
    IncrementGlobal("SHOTS_FIRED","LOCALS",1)
    UseItem("WANDREA",NearestEnemyOf(Myself))  // ~Wand of Lightning~
  RESPONSE #40
    Continue()
END

IF
  !BitGlobal("LOCALS:CREATURE_STATE_VAR","",1,AND)
THEN
  RESPONSE #100
    BitGlobal("LOCALS:CREATURE_STATE_VAR","",1,OR)
    StartRandomTimer(24,5,15)
    Continue()
END

IF
  GlobalLT("FAKE_POMAB_DEAD","GLOBAL",5)
  !TimerActive(24)
THEN
  RESPONSE #100
    SetGlobal("FAKE_POMAB_FLOAT","MYAREA",0)
    FloatMessage(Myself,17693)  // ~"I am over here."~
    StartRandomTimer(24,5,15)
    Continue()
  RESPONSE #100
    SetGlobal("FAKE_POMAB_FLOAT","MYAREA",0)
    FloatMessage(Myself,17694)  // ~"Only one of us is real... but which one?"~
    StartRandomTimer(24,5,15)
    Continue()
  RESPONSE #100
    SetGlobal("FAKE_POMAB_FLOAT","MYAREA",0)
    FloatMessage(Myself,17695)  // ~"No, not him.  I am the real Pomab."~
    StartRandomTimer(24,5,15)
    Continue()
  RESPONSE #100
    SetGlobal("FAKE_POMAB_FLOAT","MYAREA",0)
    FloatMessage(Myself,17696)  // ~"You cannot win.  I am invincible!"~
    StartRandomTimer(24,5,15)
    Continue()
  RESPONSE #100
    SetGlobal("FAKE_POMAB_FLOAT","MYAREA",0)
    FloatMessage(Myself,17703)  // ~"The power of Cryshal-Tirith is magnificent, is it not?"~
    StartRandomTimer(24,5,15)
    Continue()
  RESPONSE #100
    SetGlobal("FAKE_POMAB_FLOAT","MYAREA",0)
    FloatMessage(Myself,17699)  // ~"My sentries shall cut you down."~
    StartRandomTimer(24,5,15)
    Continue()
  RESPONSE #100
    SetGlobal("FAKE_POMAB_FLOAT","MYAREA",0)
    FloatMessage(Myself,17700)  // ~"Ha ha ha!  Admit it... you are beaten."~
    StartRandomTimer(24,5,15)
    Continue()
  RESPONSE #100
    SetGlobal("FAKE_POMAB_FLOAT","MYAREA",0)
    FloatMessage(Myself,17701)  // ~"What is the matter?  Your eyes playing tricks on you?"~
    StartRandomTimer(24,5,15)
    Continue()
END

