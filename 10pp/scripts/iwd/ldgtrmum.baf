IF
  See(NearestEnemyOf(Myself))
THEN
  RESPONSE #100
    SpellNoDec(NearestEnemyOf(Myself),CLERIC_SYMBOL_OF_PAIN)
  RESPONSE #100
    SpellNoDec(NearestEnemyOf(Myself),CLERIC_SYMBOL_OF_HOPELESSNESS)
  RESPONSE #100
    SpellNoDec(NearestEnemyOf(Myself),CLERIC_SOLS_SEARING_ORB)
  RESPONSE #100
    SpellNoDec(NearestEnemyOf(Myself),CLERIC_FLAME_STRIKE)
  RESPONSE #100
    Continue()
END

IF
  See(NearestEnemyOf(Myself))
THEN
  RESPONSE #100
    AttackOneRound(LastSeenBy(Myself))
END

