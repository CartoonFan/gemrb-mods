IF
  !Global("PURVIS_DEAD","GLOBAL",0)
  CreatureHidden(Myself)
THEN
  RESPONSE #100
    DestroySelf()
END

IF
  Global("THURLOW_MURDER","GLOBAL",0)
  Global("BODY_COUNT","GLOBAL",4)
  See([PC])
THEN
  RESPONSE #100
    StartCutSceneMode()
    MultiPlayerSync()
    FadeToColor([0.0],0)
    Wait(1)
    StartCutScene("LWPRVFND")
END

