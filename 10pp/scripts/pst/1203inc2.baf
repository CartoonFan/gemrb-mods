IF
  OnCreation()
THEN
  RESPONSE #100
    SetInternal(Myself,INTERNAL_1,0)
    SetInternal(Myself,INTERNAL_2,0)
    SetInternal(Myself,INTERNAL_3,0)
    SetInternal(Myself,INTERNAL_4,0)
END

IF
  Internal(Myself,INTERNAL_1,1)
  See([PC])
THEN
  RESPONSE #100
    Help()
    Attack([PC])
END

IF
  AttackedBy([PC],DEFAULT)
THEN
  RESPONSE #100
    Enemy()
    SetInternal(Myself,INTERNAL_1,1)
    PolymorphEx("""""(cl 1) Nameless One, Severed Arm""""",0)
    SetAnimState(Myself,ANIM_MISC1)
    Help()
    Attack(LastAttackerOf(Myself))
END

IF
  Global("Uyo_Paranoid","GLOBAL",2)
  Internal(Myself,INTERNAL_2,1)
THEN
  RESPONSE #100
    DebugOutput("********inc2_Attack_inc1********")
    Attack("Incar1")
END

IF
  Global("Uyo_Paranoid","GLOBAL",2)
  Internal(Myself,INTERNAL_3,1)
THEN
  RESPONSE #100
    DebugOutput("********inc2_Attack_inc3********")
    Attack("Incar3")
END

IF
  !TimerActive(1)
  Internal(Myself,INTERNAL_4,1)
  !Global("Uyo_Paranoid","GLOBAL",2)
  !Help("Incar1")  // ~Incarnation~
  !Help("Incar3")  // ~Incarnation~
  !Allegiance(Myself,ENEMY)
THEN
  RESPONSE #100
    DebugOutput("********inc2_Talk********")
    FloatMessage(Myself,67888)  // ~"KILL yourselves... thieves!"~
    StartRandomTimer(1,15,45)
END

IF
  Help("Incar1")  // ~Incarnation~
THEN
  RESPONSE #100
    DebugOutput("********inc2_Help_inc1********")
    SetInternal(Myself,INTERNAL_2,1)
    PolymorphEx("""""(cl 1) Nameless One, Severed Arm""""",0)
    SetAnimState(Myself,ANIM_MISC1)
END

IF
  Help("Incar3")  // ~Incarnation~
THEN
  RESPONSE #100
    DebugOutput("********inc2_Help_inc3********")
    SetInternal(Myself,INTERNAL_3,1)
    PolymorphEx("""""(cl 1) Nameless One, Severed Arm""""",0)
    SetAnimState(Myself,ANIM_MISC1)
END

IF
  !TimerActive(1)
  !Global("Uyo_Paranoid","GLOBAL",2)
  Help([ANYONE])
  !Help("Incar1")  // ~Incarnation~
  !Help("Incar3")  // ~Incarnation~
THEN
  RESPONSE #100
    DebugOutput("********inc2_Help********")
    SetInternal(Myself,INTERNAL_4,1)
END

