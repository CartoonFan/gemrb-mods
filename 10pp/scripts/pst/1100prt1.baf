IF
  HarmlessEntered("Nordom")  // ~Modron~
THEN
  RESPONSE #100
    VerbalConstant("Nordom",NORDOM_PORTAL)
    Continue()
END

IF
  HarmlessEntered([PC])
  Global("Portal_Open","GLOBAL",1)
  Global("AR1000_Visited","GLOBAL",0)
THEN
  RESPONSE #100
    ActivatePortalCursor("to1000",1)
    EnablePortalTravel("to1000",1)
END

