IF
  OnCreation()
THEN
  RESPONSE #100
    ChangeSpecifics(Myself,ACTOR_1)
END

IF
  See(NearestEnemyOf(Myself))
THEN
  RESPONSE #100
    RunAwayFromEx(NearestEnemyOf(Myself),TWO_AI_SECONDS,FALSE)
END

IF
  Help([0.0.ACTOR])
THEN
  RESPONSE #100
    Enemy()
    RunAwayFromEx(NearestEnemyOf(Myself),TWO_AI_SECONDS,FALSE)
END

IF
  AttackedBy([PC],DEFAULT)
THEN
  RESPONSE #100
    Help()
    Enemy()
    GlobalSet("Call_MK","GLOBAL",1)
    RunAwayFromEx(NearestEnemyOf(Myself),TWO_AI_SECONDS,FALSE)
END

IF
  !NearLocation(Myself,[2574.2666],0)
THEN
  RESPONSE #100
    MoveToPoint([2574.2666])
    Face(2)
END

IF
  WasInDialog()
THEN
  RESPONSE #100
    ReturnToSavedPlace()
END

IF
  !NearSavedLocation(0)
THEN
  RESPONSE #100
    ReturnToSavedPlace()
END

IF
  True()
THEN
  RESPONSE #100
    Continue()
END

IF
  Range([0.0.0.0.0.0.ACTOR_2],15)
THEN
  RESPONSE #100
    FaceObject([0.0.0.0.0.0.ACTOR_2])
    ForceFacing([0.0.0.0.0.0.ACTOR_2],6)
    FloatMessage(Myself,50763)  // ~"To that, 'good' Derek, I say fie, fie, and fie once more to thee!"~
    Wait(5)
    FloatMessage([0.0.0.0.0.0.ACTOR_2],50764)  // ~"Unprovoked, that was; wholly undeserved! What hath riled thee so?"~
    Wait(5)
    FloatMessage(Myself,50765)  // ~"Nonsense! An attack, that was, though now thou dost seek to deny it!"~
    Wait(5)
    FloatMessage([0.0.0.0.0.0.ACTOR_2],50766)  // ~"A fool thou art, angered over nothing!"~
    Wait(3)
    FloatMessage(Myself,50767)  // ~"*Fool?!* I?! Foolish only for suffering thy miserable company!"~
    Wait(5)
    FloatMessage([0.0.0.0.0.0.ACTOR_2],50768)  // ~"That is all, then! Draw thy blade!"~
    Wait(2)
    FloatMessage(Myself,50769)  // ~"I shall, so that thou might taste of it!"~
    Wait(2)
    SetAnimState(Myself,ANIM_ATTACK)
    SetAnimState([0.0.0.0.0.0.ACTOR_2],ANIM_DAMAGE)
    FloatMessage([0.0.0.0.0.0.ACTOR_2],50770)  // ~"Thou dost strike like a sickly child!"~
    Wait(2)
    SetAnimState([0.0.0.0.0.0.ACTOR_2],ANIM_ATTACK)
    SetAnimState(Myself,ANIM_DAMAGE)
    FloatMessage(Myself,50771)  // ~"And thou, like a gutless fop!"~
    Wait(3)
    FloatMessage([0.0.0.0.0.0.ACTOR_2],50772)  // ~"Wait - why do we fight?"~
    Wait(3)
    FloatMessage(Myself,50773)  // ~"Yes; let us stop this nonsense."~
    Wait(3)
    FloatMessage([0.0.0.0.0.0.ACTOR_2],50774)  // ~"Good, good. I would hate to see our friendship come to this."~
    Wait(4)
    FloatMessage(Myself,50775)  // ~"Thou art correct indeed."~
    Wait(5)
    FloatMessage([0.0.0.0.0.0.ACTOR_2],50776)  // ~"Though perhaps our friendship t'would be a bit more stable..."~
    Wait(5)
    FloatMessage(Myself,50777)  // ~::Looks Suspicious:: "Eh?"~
    Wait(3)
    FloatMessage([0.0.0.0.0.0.ACTOR_2],50778)  // ~"...were it not for thy temper."~
    Wait(4)
    FloatMessage(Myself,50779)  // ~"Temper? What mean thee by this?"~
    Wait(4)
    FloatMessage([0.0.0.0.0.0.ACTOR_2],50780)  // ~"Come now; surely thou must admit that thy temper is a bit, well..."~
    Wait(6)
END

