  Global("AR0503_Visited","GLOBAL",1)
  Global("Join_Godsmen","GLOBAL",3)
  Global("Foundry_Death_CutScene","AR0502",0)
THEN
  RESPONSE #100
    StartCutSceneMode()
    SetAnimState("FoundryGears",ANIM_DIE)
    DeactivateEx("FoundryGears",TRUE)
    SinisterPoof("GDMBody",[1670.1435],-1)
    DisableFogDither()
    DisableSpriteDither()
    ExploreMapChunk([1670.1404],0,600)
    MoveViewPoint([1670.1404],VERY_FAST)
    GlobalSet("Current_Area","GLOBAL",502)
    GlobalSet("Foundry_Death_Cutscene","AR0502",1)
    StartCutScene("0502cut1")
END

