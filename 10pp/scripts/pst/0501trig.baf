IF
  HarmlessEntered("Nordom")  // ~Modron~
THEN
  RESPONSE #100
    VerbalConstant("Nordom",NORDOM_PORTAL)
    Continue()
END

IF
  TimerExpired(1)
THEN
  RESPONSE #100
    ActivatePortalCursor("to0500",0)
    EnablePortalTravel("to0500",0)
END

IF
  HarmlessEntered([PC])
THEN
  RESPONSE #100
    ActivatePortalCursor("to0500",1)
    EnablePortalTravel("to0500",1)
    StartTimer(1,10)
END

