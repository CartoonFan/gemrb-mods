IF
  Global("SC_Ilquix_Form","AR0402",1)
  Exists([0.0.0.0.GLABREZU][0.0.10000.10000])
THEN
  RESPONSE #100
    Attack(LastTrigger)
END

IF
  See(NearestEnemyOf(Myself))
THEN
  RESPONSE #100
    Attack(NearestEnemyOf(Myself))
END

IF
  Help([0.0.0.0.ABISHAI_BLACK])
  Allegiance(LastAttackerOf(LastHelp),PC)
THEN
  RESPONSE #100
    Enemy()
    Attack(LastAttackerOf(LastHelp))
END

IF
  AttackedBy([PC],DEFAULT)
THEN
  RESPONSE #100
    Help()
    Enemy()
    Attack(LastAttackerOf(Myself))
END

