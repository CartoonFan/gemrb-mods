IF
  Die()
THEN
  RESPONSE #100
    GlobalSet("Demonbox","GLOBAL",4)
END

IF
  AttackedBy([ANYONE],DEFAULT)
THEN
  RESPONSE #100
    Enemy()
    Attack(LastAttackerOf(Myself))
END

IF
  See([PC])
THEN
  RESPONSE #100
    Enemy()
    Attack([PC])
END

IF
  True()
THEN
  RESPONSE #100
    FaceObject("Nameless")
END

