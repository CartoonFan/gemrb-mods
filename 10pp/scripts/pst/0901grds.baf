IF
  OnCreation()
THEN
  RESPONSE #100
    ChangeSpecifics(Myself,GUARD_1)
    Enemy()
    Continue()
END

IF
  See([0.0.0.0.GEHRELETH])
THEN
  RESPONSE #100
    Enemy()
    Attack([0.0.0.0.GEHRELETH])
END

IF
  See([PC])
  !See([0.0.0.0.GEHRELETH])
THEN
  RESPONSE #100
    Enemy()
    Help()
    Attack([PC])
END

IF
  Help([0.0.0.0.0.0.GUARD_1])
THEN
  RESPONSE #100
    Enemy()
    Help()
    Attack(NearestEnemyOf(LastHelp))
END

IF
  AttackedBy([ANYONE],DEFAULT)
THEN
  RESPONSE #100
    Enemy()
    Attack(LastAttackerOf(Myself))
END

