IF
  HarmlessEntered("Nordom")  // ~Modron~
THEN
  RESPONSE #100
    VerbalConstant("Nordom",NORDOM_PORTAL)
    Continue()
END

IF
  HarmlessEntered([PC])
  PartyHasItem("BoneChrm")  // ~Bone Charm~
  Global("0201_Portal_Open","AR0201",0)
THEN
  RESPONSE #100
    GlobalSet("0201_Portal_Open","AR0201",1)
    ActivatePortalCursor("Outside_Portal",1)
    EnablePortalTravel("Outside_Portal",1)
END

