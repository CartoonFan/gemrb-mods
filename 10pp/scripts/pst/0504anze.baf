IF
  AttackedBy([PC],DEFAULT)
  Global("Call_MK","GLOBAL",1)
THEN
  RESPONSE #100
    FloatMessage(Myself,27432)  // ~"Help! Guards! I'm being attacked!"~
    Help()
    RunAwayFromEx(LastAttackerOf(Myself),50,FALSE)
END

IF
  !Allegiance(Myself,ENEMY)
THEN
  RESPONSE #100
    ReturnToSavedPlace()
    PlaySequence(ANIM_TALK1)
    FloatMessage(Myself,31970)  // ~"Ya be lookin' like you could use a better weapon there, cutter!"~
    WaitRandom(5,10)
    Continue()
  RESPONSE #100
    ReturnToSavedPlace()
    PlaySequence(ANIM_TALK1)
    FloatMessage(Myself,31974)  // ~"'C'mon over 'ere and put some of ya copper to good use!"~
    WaitRandom(5,10)
    Continue()
  RESPONSE #100
    ReturnToSavedPlace()
    PlaySequence(ANIM_TALK1)
    FloatMessage(Myself,31976)  // ~"Arms for sale! Arms for sale!"~
    WaitRandom(5,10)
    Continue()
END

