IF
  Global("0707_Make_Enemy","AR0707",1)
  Exists([PC][0.0.10000.10000])
THEN
  RESPONSE #100
    Enemy()
    Attack([PC][0.0.10000.10000])
END

IF
  AttackedBy([PC],DEFAULT)
THEN
  RESPONSE #100
    Enemy()
    GlobalSet("0707_Make_Enemy","AR0707",1)
    Attack(LastAttackerOf(Myself))
END

IF
  !NearSavedLocation(0)
THEN
  RESPONSE #100
    ReturnToSavedPlace()
END

