IF
  See(NearestEnemyOf(Myself))
THEN
  RESPONSE #100
    Attack(NearestEnemyOf(Myself))
END

IF
  AttackedBy([PC],DEFAULT)
THEN
  RESPONSE #100
    Enemy()
    Attack(LastAttackerOf(Myself))
END

IF
  Global("Trelon_Team_2","AR0708",1)
THEN
  RESPONSE #100
    Enemy()
    RunningAttack([PC])
END

IF
  See([PC])
THEN
  RESPONSE #100
    GlobalSet("Trelon_Team_2","AR0708",1)
    Enemy()
    RunningAttack([PC])
END

IF
  !NearSavedLocation(0)
THEN
  RESPONSE #100
    ReturnToSavedPlace()
END

IF
  True()
THEN
  RESPONSE #100
    RandomWalk()
END

