IF
  OnCreation()
THEN
  RESPONSE #100
    ChangeTeam(Myself,TEAM_NONGHOUL)
END

IF
  Die()
THEN
  RESPONSE #100
    IncrementGlobal("DN_Rats_Dead","AR1500",1)
END

IF
  See(NearestEnemyOf(Myself))
  Global("Rat_Out_Of_Spells","AR1500",1)
THEN
  RESPONSE #100
    Attack(NearestEnemyOf(Myself))
END

IF
  Range([PC],3)
THEN
  RESPONSE #100
    Attack([PC])
END

