IF
  OnCreation()
THEN
  RESPONSE #100
    IncrementGlobal("Collective_Rats_Spawned","AR1601",1)
END

IF
  Die()
  Exists("ManyC")  // ~Cranium Rat Collective~
THEN
  RESPONSE #100
    IncrementGlobal("Collective_Rats_Killed","AR1601",1)
END

IF
  AttackedBy([PC],DEFAULT)
THEN
  RESPONSE #100
    Attack(LastAttackerOf(Myself))
END

IF
  See(NearestEnemyOf(Myself))
THEN
  RESPONSE #100
    Attack(NearestEnemyOf(Myself))
END

