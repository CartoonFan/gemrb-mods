IF
  Allegiance(Myself,ENEMY)
  Global("Mortuary_Alert_2","GLOBAL",1)
THEN
  RESPONSE #100
    ChangeEnemyAlly(Myself,NEUTRAL)
END

IF
  AttackedBy([PC],DEFAULT)
THEN
  RESPONSE #100
    Enemy()
    RunAwayFromEx(LastAttackerOf(Myself),100,TRUE)
END

IF
  !TimerActive(1)
THEN
  RESPONSE #100
    PlaySequence(ANIM_STANDFIDGET2)
    StartRandomTimer(1,10,20)
  RESPONSE #100
    PlaySequence(ANIM_STANDFIDGET1)
    StartRandomTimer(1,10,20)
  RESPONSE #100
    FloatMessage(Myself,5138)  // ~*Cough*~
    StartRandomTimer(1,10,20)
  RESPONSE #100
    FloatMessage(Myself,5139)  // ~*Cough* - *Cough*~
    StartRandomTimer(1,10,20)
END

IF
  Global("0202_Dhall_Face_Player","AR0202",1)
THEN
  RESPONSE #100
    FaceObject([PC])
END

IF
  !InteractingWith([PC])
THEN
  RESPONSE #100
    Face(6)
END

