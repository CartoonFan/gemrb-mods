    FloatMessage(Myself,10571)  // ~"I'm getting bored of waiting for him."~
    GlobalSet("SC_Mercy_Turn_Talk","AR0402",0)
    IncrementGlobal("SC_Mercy_3_At_Table","AR0402",1)
