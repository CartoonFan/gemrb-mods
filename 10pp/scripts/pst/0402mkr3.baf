    Wait(5)
    MoveToPoint([685.974])
    Face(3)
    Wait(6)
    Face(7)
    Wait(4)
    MoveToPoint([1029.889])
    Face(12)
    MoveToPoint([1301.706])
    Face(11)
    Wait(6)
    Face(12)
    Wait(4)
    MoveToPoint([1096.650])
