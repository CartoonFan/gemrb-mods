IF
  OnCreation()
  Global("Cornugon_Captain_Spawn","GLOBAL",1)
THEN
  RESPONSE #100
    GlobalSet("Cornugon_Captain_Spawn","GLOBAL",0)
    StartCutSceneMode()
    StartCutScene("1000cut1")
END

IF
  AttackedBy([PC],DEFAULT)
THEN
  RESPONSE #100
    Enemy()
    Attack(LastAttackerOf(Myself))
END

IF
  See([PC])
THEN
  RESPONSE #100
    Attack([PC])
END

