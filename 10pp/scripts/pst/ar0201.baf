IF
  !Exists([ENEMY][0.0.10000.10000])
  Global("Mortuary_Alert_1","GLOBAL",1)
THEN
  RESPONSE #100
    GlobalSet("Mortuary_Alert_1","GLOBAL",0)
    Continue()
END

IF
  NearLocation([PC][1070.1040.400.-1],[1070.1040],45)
THEN
  RESPONSE #100
    StartSong(CHAR_DEIONARRA,[0.0],Normal)
    Continue()
END

IF
  !BitCheck("0201_Status","AR0201",BIT3)
  !GlobalLT("Mortuary_Walkthrough","GLOBAL",4)
THEN
  RESPONSE #100
    BitSet("0201_Status","AR0201",BIT3)
    ForceAIScript("0201dmor","Morte",AREA)
    Continue()
END

IF
  !BitCheck("0201_Status","AR0201",BIT4)
  Global("AR0200_Visited","GLOBAL",1)
THEN
  RESPONSE #100
    SetDoorLocked("Fakedoor",FALSE)
    BitSet("0201_Status","AR0201",BIT4)
END

IF
  !BitCheck("0201_Status","AR0201",BIT4)
  Global("AR0206_Visited","GLOBAL",1)
THEN
  RESPONSE #100
