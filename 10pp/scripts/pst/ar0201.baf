    BitSet("0201_Status","AR0201",BIT4)
END

IF
  !Global("Current_Area","GLOBAL",201)
THEN
  RESPONSE #100
    GlobalSetGlobal("Previous_Area","GLOBAL","Current_Area","GLOBAL")
    GlobalSet("Current_Area","GLOBAL",201)
    Continue()
END

IF
  Global("0201_Portal_Open","AR0201",1)
  !NearLocation([PC][1450.500.400.-1],[1450.500],32)
THEN
  RESPONSE #100
    GlobalSet("0201_Portal_Open","AR0201",0)
    ActivatePortalCursor("Outside_Portal",0)
