IF
  Global("Spawn_Shadows","GLOBAL",0)
THEN
  RESPONSE #100
    PlaySequence(ANIM_DIE)
    DestroySelf()
END

IF
  AttackedBy([ANYONE],DEFAULT)
THEN
  RESPONSE #100
    Attack(LastAttackerOf(Myself))
END

IF
  True()
THEN
  RESPONSE #100
    MoveToObjectEx("Nameless",0)
    Attack("Nameless")
END

