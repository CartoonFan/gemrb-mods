IF
  Vacant()
THEN
  RESPONSE #100
    GlobalSet("No_Cube_Here","GLOBAL",0)
END

IF
  Exists("Nameless")  // ~Nameless One~
  !GlobalGT("AR1000_Visited","GLOBAL",0)
THEN
  RESPONSE #100
    StartMovie("Baator")
    GlobalSet("AR1000_Visited","GLOBAL",1)
    Continue()
END

IF
  !Global("Current_Area","GLOBAL",1000)
THEN
  RESPONSE #100
    GlobalSet("Current_Area","GLOBAL",1000)
    GlobalSet("No_Cube_Here","GLOBAL",1)
    GlobalSet("Destroy_Fiends","AR1000",1)
    ActivatePortalCursor("Baator_Portal",0)
    EnablePortalTravel("Baator_Portal",0)
    ChangeAIScript("ar1000ch",DEFAULT)
    Continue()
END

IF
  Global("Destroy_Fiends","AR1000",1)
THEN
  RESPONSE #100
    GlobalSet("Destroy_Fiends","AR1000",0)
END

