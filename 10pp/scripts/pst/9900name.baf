IF
  Global("Jumble","GLOBAL",2)
  !TimerActive(1)
THEN
  RESPONSE #100
    FloatMessage(Myself,46633)  // ~*Hiccup!*~
    StartRandomTimer(1,20,40)
    Continue()
END

IF
  AttackedBy([PC],DEFAULT)
THEN
  RESPONSE #100
    Enemy()
    Attack(LastAttackerOf(Myself))
END

IF
  True()
THEN
  RESPONSE #100
    FaceObject([PC])
END

