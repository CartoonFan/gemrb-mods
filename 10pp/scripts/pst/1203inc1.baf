IF
  OnCreation()
THEN
  RESPONSE #100
    SetInternal(Myself,INTERNAL_1,0)
    SetInternal(Myself,INTERNAL_2,0)
END

IF
  Internal(Myself,INTERNAL_2,1)
  See([PC])
THEN
  RESPONSE #100
    Help()
    Attack([PC])
END

IF
  AttackedBy([PC],DEFAULT)
THEN
  RESPONSE #100
    Enemy()
    SetInternal(Myself,INTERNAL_2,1)
    Help()
    Attack(LastAttackerOf(Myself))
END

IF
  !TimerActive(1)
  Internal(Myself,INTERNAL_1,1)
  !Allegiance(Myself,ENEMY)
THEN
  RESPONSE #100
    DebugOutput("********inc1_Talk********")
    FloatMessage(Myself,67887)  // ~"Fools."~
    StartRandomTimer(1,15,45)
END

IF
  Help([ANYONE])
THEN
  RESPONSE #100
    DebugOutput("********inc1_Help********")
    SetInternal(Myself,INTERNAL_1,1)
END

