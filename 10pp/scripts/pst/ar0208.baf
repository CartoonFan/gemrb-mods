IF
  !TimerActive(1)
  !Dead("Strahan")  // ~Necromancer~
THEN
  RESPONSE #100
    StartTimer(1,36000)
    GlobalSet("0208_Respawn","GLOBAL",1)
END

IF
  !Global("Current_Area","GLOBAL",208)
THEN
  RESPONSE #100
    GlobalSet("Current_Area","GLOBAL",208)
    GlobalSet("0208_Doomsday","AR0208",200000000)
    Continue()
END

IF
  Exists("Nameless")  // ~Nameless One~
  !GlobalGT("AR0208_Visited","GLOBAL",0)
THEN
  RESPONSE #100
    GlobalSet("AR0208_Visited","GLOBAL",1)
    Continue()
END

IF
  Dead("Strahan")  // ~Necromancer~
  !BitCheck("0208_Status","AR0208",BIT2)
THEN
  RESPONSE #100
    CreateCreature("GSpirit",[735.3088])  // ~Guardian Spirit~
    BitSet("0208_Status","AR0208",BIT2)
END

IF
  !BitCheck("0208_Status","AR0208",BIT1)
  !Dead("Strahan")  // ~Necromancer~
  Exists([PC][3907.2472.4173.2533])
THEN
  RESPONSE #100
    GlobalSet("0208_Trap_Spawn","GLOBAL",1)
    BitSet("0208_Status","AR0208",BIT1)
END

