IF
  AttackedBy([ANYONE],DEFAULT)
  !Global("Curst_Execution_One","GLOBAL",0)
  !Global("Curst_Execution_Two","GLOBAL",0)
  Global("Execution_Chaos","AR0900",0)
THEN
  RESPONSE #100
    GlobalSet("Curst_Execution_One","GLOBAL",0)
    GlobalSet("Curst_Execution_Two","GLOBAL",0)
    Enemy()
    Help()
    Attack(LastAttackerOf(Myself))
END

