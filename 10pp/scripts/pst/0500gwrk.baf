IF
  AttackedBy([PC],DEFAULT)
THEN
  RESPONSE #100
    GlobalSet("alarm2","GLOBAL",1)
    IncrementGlobal("Lady","GLOBAL",1)
    Enemy()
    Help()
    Attack(LastAttackerOf(Myself))
END

IF
  Help([0.0.FWORKER])
THEN
  RESPONSE #100
    Enemy()
    Attack(NearestEnemyOf(LastHelp))
END

IF
  See(NearestEnemyOf(Myself))
THEN
  RESPONSE #100
    Help()
    Attack(NearestEnemyOf(Myself))
END

