IF
  Die()
THEN
  RESPONSE #100
END

IF
  Allegiance(Myself,ENEMY)
THEN
  RESPONSE #100
    RunAwayFromEx([PC],50,FALSE)
END

IF
  AttackedBy([PC],DEFAULT)
THEN
  RESPONSE #100
    Help()
    Enemy()
END

IF
  True()
THEN
  RESPONSE #100
    RunToPoint([438.333])
    Face(4)
    GlobalSet("Wait_For_Messenger","AR0509",1)
    Wait(5)
    FloatMessage(Myself,1793)  // ~"I'll be back with your receipt!"~
    PlaySequence(ANIM_TALK1)
    RunToPoint([210.524])
    GlobalSet("Change_Brain","AR0509",1)
    GlobalSet("Respawn_0509","GLOBAL",0)
    DestroySelf()
END

