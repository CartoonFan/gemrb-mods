IF
  Global("0301_Bad_Angry","AR0301",1)
  Allegiance(Myself,NEUTRAL)
THEN
  RESPONSE #100
    ClearActions()
    Enemy()
    Continue()
END

IF
  See([0.0.ALLEY_GANG.GOOD])
THEN
  RESPONSE #100
    Attack([0.0.ALLEY_GANG.GOOD])
END

IF
  See("BlackR")  // ~Vigilante~
THEN
  RESPONSE #100
    Attack("BlackR")
END

IF
  See(NearestEnemyOf(Myself))
THEN
  RESPONSE #100
    Attack(NearestEnemyOf(Myself))
END

IF
  AttackedBy([0.0.ALLEY_GANG.BAD],DEFAULT)
THEN
  RESPONSE #100
    Attack(LastAttackerOf(Myself))
END

IF
  AttackedBy("BlackR",DEFAULT)  // ~Vigilante~
THEN
  RESPONSE #100
    Attack(LastAttackerOf(Myself))
END

IF
  AttackedBy([0.0.ALLEY_GANG.GOOD],DEFAULT)
THEN
  RESPONSE #100
    Attack(LastAttackerOf(Myself))
END

IF
  AttackedBy([PC],DEFAULT)
THEN
  RESPONSE #100
    GlobalSet("0301_Bad_Angry","AR0301",1)
    Enemy()
    Help()
    Attack(LastAttackerOf(Myself))
END

IF
  Help([0.0.ALLEY_GANG.BAD])
THEN
  RESPONSE #100
    Attack(LastAttackerOf(LastHelp))
END

