IF
  Allegiance(Myself,ENEMY)
THEN
  RESPONSE #100
    RunAwayFromEx([PC],FOUR_AI_SECONDS,FALSE)
    EscapeArea()
END

IF
  AttackedBy([PC],DEFAULT)
THEN
  RESPONSE #100
    Enemy()
    RunAwayFromEx([PC],50,FALSE)
END

IF
  InternalLT(Myself,INTERNAL_6,1)
THEN
  RESPONSE #100
    MoveToPoint([2235.1991])
    Face(14)
    WaitRandom(5,7)
    MoveToPoint([2235.1852])
    Face(10)
    WaitRandom(5,7)
    MoveToPoint([2096.1852])
    Face(6)
    WaitRandom(5,7)
    MoveToPoint([2096.1991])
    Face(14)
    WaitRandom(5,7)
END

