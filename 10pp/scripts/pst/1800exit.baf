IF
  Entered("Nordom")  // ~Modron~
THEN
  RESPONSE #100
    VerbalConstant("Nordom",NORDOM_PORTAL)
    Continue()
END

IF
  Entered([PC])
THEN
  RESPONSE #100
    ActivatePortalCursor("Exit_Portal",1)
    EnablePortalTravel("Exit_Portal",1)
END

IF
  HarmlessOpened([PC])
THEN
  RESPONSE #100
    ActivatePortalCursor("Exit_Portal",1)
    EnablePortalTravel("Exit_Portal",1)
END

