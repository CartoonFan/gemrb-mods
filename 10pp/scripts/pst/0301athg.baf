IF
  Global("0301_Neutral_Angry","AR0301",1)
  Allegiance(Myself,NEUTRAL)
THEN
  RESPONSE #100
    Enemy()
    Continue()
END

IF
  See(NearestEnemyOf(Myself))
THEN
  RESPONSE #100
    GlobalSet("0301_Neutral_Angry","AR0301",1)
    Help()
    Attack(NearestEnemyOf(Myself))
END

IF
  AttackedBy([0.0.ALLEY_GANG],DEFAULT)
THEN
  RESPONSE #100
    Attack(LastAttackerOf(Myself))
END

IF
  AttackedBy([PC],DEFAULT)
THEN
  RESPONSE #100
    GlobalSet("0301_Neutral_Angry","AR0301",1)
    Enemy()
    Help()
    Attack(LastAttackerOf(Myself))
END

IF
  Help([0.0.ALLEY_GANG])
THEN
  RESPONSE #100
    Enemy()
    Attack(LastAttackerOf(LastHelp))
END

