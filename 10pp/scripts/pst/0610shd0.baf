IF
  See([PC])
THEN
  RESPONSE #100
    Enemy()
    Help()
    Attack([PC])
END

IF
  See([0.0.0.0.TRIGIT])
THEN
  RESPONSE #100
    Enemy()
    Help()
    Attack([0.0.0.0.TRIGIT])
END

IF
  Help([0.0.0.0.SHADOW_MARK_2])
THEN
  RESPONSE #100
    Enemy()
    Help()
    Attack(NearestEnemyOf(LastHelp))
END

IF
  Help([0.0.0.0.SHADOW_MARK_1])
THEN
  RESPONSE #100
    Enemy()
    Help()
    Attack(NearestEnemyOf(LastHelp))
END

IF
  AttackedBy([ANYONE],DEFAULT)
THEN
  RESPONSE #100
    Enemy()
    Help()
    Attack(LastAttackerOf(Myself))
END

