IF
  Die()
THEN
  RESPONSE #100
    IncrementGlobal("Kill_SDThug","GLOBAL",1)
END

IF
  See([PC])
THEN
  RESPONSE #100
    Enemy()
    Help()
    Attack([PC])
END

IF
  AttackedBy([PC],DEFAULT)
THEN
  RESPONSE #100
    Enemy()
    Help()
    Attack(LastAttackerOf(Myself))
END

IF
  Help([0.XAOSITECT])
THEN
  RESPONSE #100
    Enemy()
    Help()
    MoveToObjectEx(Protagonist,0)
    Attack(NearestEnemyOf(LastHelp))
END

IF
  Allegiance(Myself,ENEMY)
  See([PC])
THEN
  RESPONSE #100
    Help()
    Attack([PC])
END

