    Wait(5)
    Face(8)
    Wait(3)
    MoveToPoint([636.2122])
    Face(10)
    Wait(2)
    Face(2)
    Wait(3)
    MoveToPoint([437.2260])
    Face(2)
    Wait(2)
    Face(10)
    Wait(3)
    MoveToPoint([636.2122])
    Face(10)
    Wait(2)
    Face(0)
