IF
  OnCreation()
THEN
  RESPONSE #100
    ChangeSpecifics(Myself,PERSON_9)
    Enemy()
    Continue()
END

IF
  Die()
THEN
  RESPONSE #100
    IncrementGlobal("Mob_Dead","AR3016",1)
END

IF
  !Dead("Kester")  // ~Kester~
THEN
  RESPONSE #10
    FloatMessage(Myself,54296)  // ~"Let's get him!"~
    Attack("Kester")
  RESPONSE #10
    FloatMessage(Myself,54295)  // ~"Your time's up, distiller."~
    Attack("Kester")
  RESPONSE #10
    FloatMessage(Myself,54293)  // ~"No escape for you now."~
    Attack("Kester")
  RESPONSE #100
    Attack("Kester")
END

IF
  See([PC])
THEN
  RESPONSE #100
    Help()
    Attack([PC])
END

IF
  Help([0.0.0.0.0.0.PERSON_9])
THEN
  RESPONSE #100
    Help()
    Attack(NearestEnemyOf(LastHelp))
END

IF
  AttackedBy([ANYONE],DEFAULT)
THEN
  RESPONSE #100
    Help()
    Attack(LastAttackerOf(Myself))
END

IF
  Dead("Kester")  // ~Kester~
  !See([PC])
THEN
  RESPONSE #100
    Face(-1)
    Wait(2)
END

