IF
  HPPercentLT(Myself,50)
  Allegiance(Myself,ENEMY)
THEN
  RESPONSE #100
    RunAwayFromEx([PC],50,FALSE)
END

IF
  See(NearestEnemyOf(Myself))
THEN
  RESPONSE #100
    Help()
    Attack(NearestEnemyOf(Myself))
END

IF
  AttackedBy([PC],DEFAULT)
THEN
  RESPONSE #100
    Enemy()
    Help()
    Attack(LastAttackerOf(Myself))
END

IF
  !NearLocation(Myself,[2562.764],128)
THEN
  RESPONSE #100
    MoveToPoint([2562.764])
END

IF
  TimerExpired(1)
THEN
  RESPONSE #25
    Wait(3)
END

IF
  True()
THEN
  RESPONSE #100
    RandomWalk()
END

