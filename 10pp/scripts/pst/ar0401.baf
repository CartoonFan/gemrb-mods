IF
  GlobalGT("Pregnant_Quest","GLOBAL",2)
  !BitCheck("0401_Status","AR0401",BIT3)
THEN
  RESPONSE #100
    ResetFogOfWar()
    CloseDoor("block1")
    OpenDoor("block2")
    OpenDoor("block3")
    CloseDoor("block4")
    BitSet("0401_Status","AR0401",BIT3)
END

IF
  Global("Sybil_Quest","GLOBAL",2)
  !Dead("Sybil")  // ~Hive Scavenger~
  !BitCheck("0401_Status","AR0401",BIT4)
THEN
  RESPONSE #100
    BitSet("0401_Status","AR0401",BIT4)
    CreateCreature("Sybil",[1360.484])  // ~Hive Scavenger~
    Continue()
END

IF
  Global("Dabus_Trap","GLOBAL",2)
  !Exists("ADabus")  // ~Dabus~
  !BitCheck("0401_Status","AR0401",BIT3)
THEN
  RESPONSE #100
    DebugOutput("*******************Closing_door*******************")
    CloseDoor("ar0401d3")
    SetDoorLocked("ar0401d3",TRUE)
    BitSet("0401_Status","AR0401",BIT3)
END

IF
  BitCheck("0401_Status","AR0401",BIT2)
THEN
  RESPONSE #100
    CloseDoor("ar0401d1")
    BitClear("0401_Status","AR0401",BIT2)
END

IF
  !Global("Current_Area","GLOBAL",401)
THEN
  RESPONSE #100
    GlobalSet("Current_Area","GLOBAL",401)
    Continue()
END

IF
  Exists("Nameless")  // ~Nameless One~
  !GlobalGT("AR0401_Visited","GLOBAL",0)
THEN
  RESPONSE #100
    GlobalSet("AR0401_Visited","GLOBAL",1)
    Continue()
END

