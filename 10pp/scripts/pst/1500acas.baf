IF
  OnCreation()
THEN
  RESPONSE #100
    ChangeTeam(Myself,GHOUL)
    Face(14)
END

IF
  Die()
  AttackedBy([PC],DEFAULT)
THEN
  RESPONSE #100
    GlobalSet("Undead_Alert","AR1500",1)
    CreateItem("SkullAc",0,0,0)  // ~Acaste's Skull~
    DropInventory()
END

IF
  Die()
THEN
  RESPONSE #100
    CreateItem("SkullAc",0,0,0)  // ~Acaste's Skull~
    DropInventory()
END

IF
  Global("Undead_Alert","AR1500",1)
  !Allegiance(Myself,ENEMY)
THEN
  RESPONSE #100
    Enemy()
END

IF
  Global("Ghoul_Attack","GLOBAL",1)
THEN
  RESPONSE #100
    Enemy()
    ChangeAIScript("1500clon",DEFAULT)
END

IF
  See(NearestEnemyOf(Myself))
THEN
  RESPONSE #100
    Attack(NearestEnemyOf(Myself))
END

IF
  AttackedBy([PC],DEFAULT)
THEN
  RESPONSE #100
    GlobalSet("Undead_Alert","AR1500",1)
    Enemy()
    Attack(LastAttackerOf(Myself))
END

IF
  AttackedBy([ANYONE],DEFAULT)
THEN
  RESPONSE #100
    Attack(LastAttackerOf(Myself))
END

IF
  !NearSavedLocation(3)
THEN
  RESPONSE #100
    ReturnToSavedPlace()
END

IF
  See([PC])
THEN
  RESPONSE #100
    FaceObject([PC])
    WaitRandom(4,6)
    FloatMessageRnd(Myself,"1500aca2")
    GlobalSet("Acaste_Hungry","AR1500",1)
END

IF
  True()
THEN
  RESPONSE #100
    Face(14)
    WaitRandom(4,6)
    FloatMessageRnd(Myself,"1500aca1")
    GlobalSet("Acaste_Hungry","AR1500",0)
END

