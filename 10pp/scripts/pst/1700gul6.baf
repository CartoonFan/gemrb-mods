IF
  Die()
THEN
  RESPONSE #100
    GlobalSet("Ghoul_Pissed_A","AR1700",1)
END

IF
  See([PC])
  Global("Ghoul_Pissed_A","AR1700",1)
THEN
  RESPONSE #100
    Enemy()
    Attack([PC])
END

IF
  !NearSavedLocation(0)
THEN
  RESPONSE #100
    ReturnToSavedPlace()
    Continue()
END

IF
  True()
THEN
  RESPONSE #25
    KillFloatMessage(Myself)
    FloatMessage(Myself,25830)  // ~"Keep your eyesss... open."~
    WaitRandom(5,10)
  RESPONSE #25
    KillFloatMessage(Myself)
    FloatMessage(Myself,25831)  // ~"Remain watchful, ghoulsss.."~
    WaitRandom(5,10)
  RESPONSE #25
    Face(4)
    WaitRandom(3,5)
  RESPONSE #25
    Face(8)
    WaitRandom(3,5)
END

