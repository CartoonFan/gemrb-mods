IF
  Global("Good_Jujog_1","GLOBAL",1)
THEN
  RESPONSE #100
    OpenDoor("ar0900d2")
    EscapeArea()
END

IF
  Die()
  GlobalGT("Curst_Murder","GLOBAL",14)
THEN
  RESPONSE #100
    GlobalSet("Curst_Force_Spawn","GLOBAL",1)
    Continue()
END

IF
  Die()
  GlobalLT("Curst_Murder","GLOBAL",15)
THEN
  RESPONSE #100
    IncrementGlobal("Curst_Murder","GLOBAL",1)
    Continue()
END

IF
  OnCreation()
THEN
  RESPONSE #100
    ChangeSpecifics(Myself,THUG)
    Continue()
END

IF
  GlobalGT("Looter_Dead","AR0900",3)
THEN
  RESPONSE #100
    RunAwayFromEx([PC],5,FALSE)
    EscapeArea()
END

IF
  See(NearestEnemyOf(Myself))
THEN
  RESPONSE #100
    Help()
    Attack(NearestEnemyOf(Myself))
END

IF
  Help([0.0.0.0.0.0.THUG])
THEN
  RESPONSE #100
    Enemy()
    Help()
    Attack(NearestEnemyOf(LastHelp))
END

IF
  AttackedBy([ANYONE],DEFAULT)
THEN
  RESPONSE #100
    Enemy()
    Help()
    Attack(LastAttackerOf(Myself))
END

IF
  WasInDialog()
THEN
  RESPONSE #100
    ReturnToSavedPlace()
    Continue()
END

IF
  !NearSavedLocation(0)
THEN
  RESPONSE #100
    ReturnToSavedPlace()
    Continue()
END

IF
  True()
THEN
  RESPONSE #100
    FloatMessage(Myself,52802)  // ~"All right, this is how we're gonna do it!"~
    Wait(2)
    FloatMessage(Myself,52805)  // ~"You there! You'll start pryin' open crates one after another!"~
    Wait(2)
    FloatMessage(Myself,52806)  // ~"You! Look through the crates; gather the small items inta sacks an' pile 'em by the door!"~
    Wait(2)
    FloatMessage(Myself,52807)  // ~"And you! You take him, an' move anythin' larger just outside!"~
    Wait(2)
    FloatMessage(Myself,52808)  // ~"Humbra should be here with the cart, soon, so we'll start in a bit!"~
    Wait(30)
END

