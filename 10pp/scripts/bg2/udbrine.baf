IF
  Clicked([ANYONE])
  Range(LastTrigger,20)
  Global("itClicked","AR2400",0)
THEN
  RESPONSE #100
    SetGlobal("itClicked","AR2400",1)
    DisplayString(Myself,53742)  // ~This is an Illithid birthing pod.  An empty bottle lies beside the pod, if you wish you could gather some of the contents of the birthing pod into it.~
END

IF
  Clicked([ANYONE])
  Range(LastTrigger,20)
  Global("itClicked","AR2400",1)
THEN
  RESPONSE #100
    DisplayString(Myself,53745)  // ~You create a brine potion.~
    GiveItemCreate("misc9y",LastTrigger,0,0,0)  // ~Brine Potion~
    TriggerActivation(Myself,FALSE)
END

IF
  Clicked([ANYONE])
  !Range(LastTrigger,20)
THEN
  RESPONSE #100
    DisplayString(Myself,14702)  // ~You are too far away to use that.~
END

