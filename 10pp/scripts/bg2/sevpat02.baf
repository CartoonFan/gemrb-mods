IF
  Dead("sevpat03")  // ~Pooky~
  Global("cried","LOCALS",0)
THEN
  RESPONSE #100
    SetGlobal("cried","LOCALS",1)
    DisplayStringHead(Myself,11907)  // ~NO! Pooky... aughh!!~
END

IF
  Global("RiatavinFight","GLOBAL",1)
  Allegiance(Myself,NEUTRAL)
THEN
  RESPONSE #100
    Enemy()
END

IF
  OR(2)
    AttackedBy([GOODCUTOFF],DEFAULT)
    HitBy([GOODCUTOFF],CRUSHING)
  Global("RiatavinFight","GLOBAL",0)
THEN
  RESPONSE #100
    SetGlobal("RiatavinFight","GLOBAL",1)
    Enemy()
END

