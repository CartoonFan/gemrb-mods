IF
  TimeGT(5)
  TimeLT(DUSK_END)
  AreaType(OUTDOOR)
THEN
  RESPONSE #100
    ReallyForceSpellDead(Myself,VAMPIRE_BAT_FORM_CHANGE)
END

IF
  Die()
THEN
  RESPONSE #100
    SetGlobal("HareisFlee","GLOBAL",1)
    ReallyForceSpellDead(Myself,VAMPIRE_GAS_FORM_CHANGE)
END

IF
  AttackedBy([GOODCUTOFF],DEFAULT)
  Allegiance(Myself,NEUTRAL)
THEN
  RESPONSE #100
    Enemy()
END

IF
  See(NearestEnemyOf(Myself))
THEN
  RESPONSE #100
    AttackReevaluate(NearestEnemyOf(Myself),30)
END

IF
  AttackedBy([ANYONE],DEFAULT)
THEN
  RESPONSE #100
    Attack(LastAttackerOf(Myself))
END

IF
  See("VVSHAD2")  // ~Shadow Thief~
  !Dead("VVSHAD2")  // ~Shadow Thief~
THEN
  RESPONSE #100
    AttackReevaluate(LastSeenBy(Myself),15)
END

IF
  See("VVSHAD1")  // ~Shadow Thief~
  !Dead("VVSHAD1")  // ~Shadow Thief~
THEN
  RESPONSE #100
    AttackReevaluate(LastSeenBy(Myself),15)
END

IF
  See("VVSHAD3")  // ~Shadow Thief~
  !Dead("VVSHAD3")  // ~Shadow Thief~
THEN
  RESPONSE #100
    AttackReevaluate(LastSeenBy(Myself),15)
END

IF
  Dead("VVSHAD1")  // ~Shadow Thief~
  Dead("VVSHAD2")  // ~Shadow Thief~
  Dead("VVSHAD3")  // ~Shadow Thief~
  Global("vvhareisspoke","LOCALS",0)
THEN
  RESPONSE #100
    StartDialogNoSet([PC])
    SetGlobal("vvhareisspoke","LOCALS",1)
END

