IF
  OpenState("ROOM5",TRUE)  // ROOM5
  OR(2)
    IsOverMe([EVILCUTOFF.0.0.0.0.SUMMONED])
    IsOverMe([GOODCUTOFF])
THEN
  RESPONSE #100
    ApplySpell(LastTrigger,FIRE_GIANT_LAVA)
END

IF
  OpenState("ROOM5",FALSE)  // ROOM5
  IsOverMe([ANYONE])
  !GlobalTimerNotExpired("HealingPool","AR4500")
THEN
  RESPONSE #100
    SetGlobalTimer("HealingPool","AR4500",10)
    ApplySpell(LastTrigger,CLERIC_CURE_LIGHT_WOUNDS)
    ApplySpell(LastTrigger,CLERIC_SLOW_POISON)
END

