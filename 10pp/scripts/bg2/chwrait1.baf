IF
  Die()
THEN
  RESPONSE #100
    ReallyForceSpellDead(Myself,ILLUSION_DEATH)
    Wait(1)
    DestroySelf()
END

IF
  Dead("neb")  // ~Neb~
THEN
  RESPONSE #100
    ClearAllActions()
    SetGlobal("ChildWraithsFreed","GLOBAL",1)
    DisplayStringHead(Myself,5773)  // ~Thank you! I am released!~
    Wait(1)
    ForceSpell(Myself,TRAP_SHADOW_DEATH)
END

