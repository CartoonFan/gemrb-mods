END

IF
  IsOverMe([ANYONE])
  Global("CircleOfMagic","AR1514",1)
  Global("HasteOrb","AR1514",1)
THEN
  RESPONSE #100
    SetGlobal("HasteOrb","AR1514",0)
    ActionOverride(LastTrigger,ReallyForceSpell(Myself,WIZARD_HASTE))
END

