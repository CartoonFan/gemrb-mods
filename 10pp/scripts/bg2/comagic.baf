IF
  IsOverMe([ANYONE])
  Global("CircleOfMagic","AR1514",0)
THEN
  RESPONSE #100
    SetGlobal("CircleOfMagic","AR1514",1)
END

IF
  !IsOverMe([ANYONE])
  Global("CircleOfMagic","AR1514",1)
THEN
  RESPONSE #100
    SetGlobal("CircleOfMagic","AR1514",0)
END

IF
  IsOverMe([ANYONE])
  Global("CircleOfMagic","AR1514",1)
  Global("SlowOrb","AR1514",1)
THEN
  RESPONSE #100
    SetGlobal("SlowOrb","AR1514",0)
    ReallyForceSpell(LastTrigger,WIZARD_SLOW)
END

IF
  IsOverMe([ANYONE])
  Global("CircleOfMagic","AR1514",1)
  Global("HealOrb","AR1514",1)
THEN
  RESPONSE #100
    SetGlobal("HealOrb","AR1514",0)
