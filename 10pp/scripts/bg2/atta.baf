IF
  Global("OgronAttack","GLOBAL",1)
  Global("MadulfIsPresent","GLOBAL",1)
  AreaCheck("AR1100")
THEN
  RESPONSE #100
    MoveBetweenAreas("AR1106",[833.1226],5)
END

IF
  Global("OgronAttack","GLOBAL",1)
  Global("MadulfIsPresent","GLOBAL",0)
  OR(2)
    Dead("Madulf")  // Madulf
    Global("MadulfLeft","GLOBAL",1)
  AreaCheck("AR1100")
THEN
  RESPONSE #100
    EscapeArea()
END

IF
  Global("OgronAttack","GLOBAL",5)
THEN
  RESPONSE #100
    DestroySelf()
END

