    Global("ExpLoveTalk","LOCALS",1)
    Global("ExpLoveTalk","LOCALS",3)
    Global("ExpLoveTalk","LOCALS",7)
    Global("ExpLoveTalk","LOCALS",11)
    Global("ExpLoveTalk","LOCALS",13)
