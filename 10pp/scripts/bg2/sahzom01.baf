IF
  Die()
THEN
  RESPONSE #100
    ReallyForceSpellDead(Myself,WIZARD_CLOUDKILL)
END

IF
  OnCreation()
THEN
  RESPONSE #100
    SetGlobalTimer("SeaZombieLord","GLOBAL",1)
END

IF
  See(NearestEnemyOf(Myself))
  GlobalTimerExpired("SeaZombieLord","GLOBAL")
THEN
  RESPONSE #100
    ForceSpell(LastSeenBy(Myself),ZOMBIE_LEVEL_DRAIN)
    SetGlobalTimer("SeaZombieLord","GLOBAL",10)
END

