IF
  WalkedToTrigger([ANYONE])
  CheckStat(LastTrigger,18,STR)
  CheckStat(LastTrigger,100,STREXTRA)
THEN
  RESPONSE #100
    OpenDoor("DOOR02")
    TriggerActivation(Myself,FALSE)
END

IF
  WalkedToTrigger([ANYONE])
  CheckStatGT(LastTrigger,18,STR)
THEN
  RESPONSE #100
    OpenDoor("DOOR02")
    TriggerActivation(Myself,FALSE)
END

IF
  WalkedToTrigger([ANYONE])
  !GlobalTimerNotExpired("SideDoor5204Timer","AR5204")
THEN
  RESPONSE #100
    SetGlobalTimer("SideDoor5204Timer","AR5204",5)
    DisplayString(Myself,74097)  // ~You must be stronger to open this door.~
END

IF
  WalkedToTrigger([ANYONE])
  GlobalTimerNotExpired("SideDoor5204Timer","AR5204")
THEN
  RESPONSE #100
    ClearActions(LastTrigger)
END

