IF
  !Detect(Player1)
  !Allegiance(Myself,ENEMY)
  NumberOfTimesTalkedTo(0)
THEN
  RESPONSE #100
    MoveToObject(Player1)
END

IF
  !Range(Player1,10)
  !Allegiance(Myself,ENEMY)
  NumberOfTimesTalkedTo(0)
THEN
  RESPONSE #100
    MoveToObject(Player1)
END

IF
  Range(Player1,10)
  NumberOfTimesTalkedTo(0)
  Detect(Player1)
  !Allegiance(Myself,ENEMY)
  !Allegiance("kaypall",ENEMY)  // kaypall
  CombatCounter(0)
THEN
  RESPONSE #100
    StartDialogNoSet(Player1)
END

IF
  AttackedBy([GOODCUTOFF],DEFAULT)
  Allegiance(Myself,NEUTRAL)
THEN
  RESPONSE #100
    Shout(89)
    Enemy()
END

IF
  OR(2)
    Heard("kaypall",89)  // kaypall
    Allegiance("kaypall",ENEMY)  // kaypall
  Allegiance(Myself,NEUTRAL)
THEN
  RESPONSE #100
    Enemy()
END

IF
  Heard("kaypal",89)  // kaypal
  Allegiance(Myself,NEUTRAL)
THEN
  RESPONSE #100
    Enemy()
END

IF
  See(NearestEnemyOf(Myself))
THEN
  RESPONSE #100
    EquipMostDamagingMelee()
    AttackReevaluate(NearestEnemyOf(Myself),15)
END

