IF
  See(NearestEnemyOf(Myself))
  Global("coward","AR1201",1)
THEN
  RESPONSE #100
    SetGlobal("coward","AR1201",2)
    DisplayStringHead(Myself,50693)  // ~Coward...you will die! ~
END

IF
  See("hobsha01")  // ~Hobgoblin Shaman~
  !Dead("hobsha01")  // ~Hobgoblin Shaman~
  Global("coward","AR1201",2)
THEN
  RESPONSE #100
    AttackReevaluate("hobsha01",100)
END

