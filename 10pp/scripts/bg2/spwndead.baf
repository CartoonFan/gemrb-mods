IF
  XPLT(Player1,400000)
  Entered([ANYONE])
THEN
  RESPONSE #100
    CreateCreature("skelwa01",[-1.-1],0)  // ~Skeleton Warrior~
    CreateCreature("shadow01",[-1.-1],0)  // ~Shadow~
    CreateCreature("shadow01",[-1.-1],0)  // ~Shadow~
END

