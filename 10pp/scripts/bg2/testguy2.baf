IF
  Dead("testguy1")  // testguy1
  Global("Spoke","LOCALS",0)
THEN
  RESPONSE #100
    DisplayStringHead(Myself,2)  // ~You played Elminster?~
    SetGlobal("Spoke","LOCALS",1)
END

IF
  AttackedBy([ANYONE],DEFAULT)
  Allegiance(Myself,NEUTRAL)
THEN
  RESPONSE #100
    Enemy()
END

IF
  See(NearestEnemyOf(Myself))
THEN
  RESPONSE #80
    Enemy()
    AttackReevaluate(LastAttackerOf(Myself),15)
  RESPONSE #20
    RunAwayFrom(LastAttackerOf(Myself),100)
END

