IF
  Dead("SlumsSlave1")  // SlumsSlave1
  Allegiance(Myself,NEUTRAL)
THEN
  RESPONSE #100
    Enemy()
END

IF
  TimeGT(DAWN_START)
  TimeLT(DUSK_END)
  !See([PC])
THEN
  RESPONSE #100
    DestroySelf()
END

IF
  AttackedBy([GOODCUTOFF],DEFAULT)
  Allegiance(Myself,NEUTRAL)
THEN
  RESPONSE #100
    Shout(1)
    ActionOverride("SlumsSlaver2",Enemy())
    Enemy()
END

IF
  Heard("SlumsSlaver2",1)  // SlumsSlaver2
  Allegiance(Myself,NEUTRAL)
THEN
  RESPONSE #100
    Enemy()
END

IF
  Global("MovingSlave","AR0400",1)
  Allegiance(Myself,NEUTRAL)
THEN
  RESPONSE #100
    MoveToObject("SlumsSlave1")
END

IF
  Global("MovingSlave","AR0400",0)
THEN
  RESPONSE #100
    MoveToPoint([2497.2320])
    DestroySelf()
END

