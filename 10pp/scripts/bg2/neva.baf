IF
  Die()
  OR(2)
    Detect("Edwin")  // Edwin
    Range("Edwin",30)  // Edwin
THEN
  RESPONSE #100
    SetGlobal("EdwinSeesNevaziah","GLOBAL",1)
END

IF
  See(NearestEnemyOf(Myself))
  Global("prep","LOCALS",0)
THEN
  RESPONSE #100
    SetGlobal("prep","LOCALS",1)
    SpellNoDec(Myself,WIZARD_HASTE)
    SpellNoDec(Myself,WIZARD_PROTECTION_FROM_EVIL)
END

IF
  See(NearestEnemyOf(Myself))
  See(SecondNearestEnemyOf(Myself))
  HaveSpell(WIZARD_MONSTER_SUMMONING_3)
  HaveSpell(WIZARD_ANIMATE_DEAD)
THEN
  RESPONSE #100
    Spell(NearestEnemyOf(Myself),WIZARD_MONSTER_SUMMONING_3)
    Spell(SecondNearestEnemyOf(Myself),WIZARD_ANIMATE_DEAD)
    Continue()
END

