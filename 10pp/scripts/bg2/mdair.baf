IF
  Allegiance(Myself,NEUTRAL)
  Global("MDAIRTALKED","GLOBAL",0)
  See([PC])
THEN
  RESPONSE #100
    SetGlobal("MDAIRTALKED","GLOBAL",1)
    StartDialogNoSet([PC])
END

IF
  AttackedBy([GOODCUTOFF],DEFAULT)
  Allegiance(Myself,NEUTRAL)
THEN
  RESPONSE #100
    SetGlobal("MDAIRHOSTILE","GLOBAL",1)
    Enemy()
END

IF
  Allegiance(Myself,NEUTRAL)
  Global("MDAIRHOSTILE","GLOBAL",1)
THEN
  RESPONSE #100
    SetGlobal("MDAIRHOSTILE","GLOBAL",1)
    Enemy()
END

