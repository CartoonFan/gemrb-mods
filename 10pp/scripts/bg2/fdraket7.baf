IF
  Entered([ANYONE])
  Global("Firedrake7","GLOBAL",0)
THEN
  RESPONSE #100
    SetGlobal("Firedrake7","GLOBAL",1)
    SetGlobalTimer("FiredrakeTime7","GLOBAL",0)
END

IF
  Global("Firedrake7","GLOBAL",1)
  GlobalTimerExpired("FiredrakeTime7","GLOBAL")
THEN
  RESPONSE #100
    ForceSpell(LastTrigger,WIZARD_AGANNAZAR_SCORCHER)
    Wait(2)
    SetGlobalTimer("FiredrakeTime7","GLOBAL",8)
END

