IF
  Global("AmaSetup","GLOBAL",1)
  See(Player1)
  Global("StartAmbush","LOCALS",0)
  !Global("AmaAttacked","GLOBAL",1)
THEN
  RESPONSE #100
    SetGlobal("StartAmbush","LOCALS",1)
    SetGlobalTimer("AmaAmbush1","GLOBAL",5)
END

IF
  Global("AmaSetup","GLOBAL",1)
  GlobalTimerExpired("AmaAmbush1","GLOBAL")
  See(Player1)
  Global("StartAmbush","LOCALS",1)
  !Global("AmaAttacked","GLOBAL",1)
THEN
  RESPONSE #100
    SetGlobal("StartAmbush","LOCALS",2)
    StartDialogNoSet(Player1)
END

IF
  Global("AmaSetup","GLOBAL",2)
  See(Player1)
  Global("StartAmbush","LOCALS",2)
  !Global("AmaAttacked","GLOBAL",1)
THEN
  RESPONSE #100
    SetGlobal("StartAmbush","LOCALS",3)
    SetGlobalTimer("AmaAmbush2","GLOBAL",5)
END

IF
  Global("AmaSetup","GLOBAL",2)
  GlobalTimerExpired("AmaAmbush2","GLOBAL")
  See(Player1)
  Global("StartAmbush","LOCALS",3)
  !Global("AmaAttacked","GLOBAL",1)
THEN
  RESPONSE #100
    SetGlobal("StartAmbush","LOCALS",4)
    StartDialogNoSet(Player1)
END

