IF
  OR(2)
    AttackedBy([ANYONE],DEFAULT)
    Allegiance(Myself,ENEMY)
  Global("Change3","LOCALS",0)
THEN
  RESPONSE #100
    SetGlobal("Change3","LOCALS",1)
    Polymorph(RAKSHASA)
    Shout(89)
END

IF
  Allegiance(Myself,NEUTRAL)
  Global("Change3","LOCALS",0)
THEN
  RESPONSE #100
    NoAction()
END

