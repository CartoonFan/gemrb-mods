IF
  Global("Entered","AR0808",0)
THEN
  RESPONSE #100
    SetGlobal("Entered","AR0808",1)
    SetGlobal("DestroyC6Guard","GLOBAL",1)
    MoveGlobalsTo("AR0801","AR0808",[0.0])
    TriggerActivation("Coffin1",FALSE)
    TriggerActivation("Coffin2",FALSE)
    TriggerActivation("Coffin3",FALSE)
END

