IF
  Clicked([ANYONE])
  PartyHasItem("MISC1H")  // ~Gong Mallet~
  Global("Awake","GLOBAL",0)
  Range(LastTrigger,9)
THEN
  RESPONSE #100
    SetGlobal("Awake","GLOBAL",1)
    DisplayString(Myself,23185)  // ~You strike the gong sharply with the mallet. The gong makes no sound but you can sense a faint vibration.~
END

IF
  Clicked([ANYONE])
  Global("Awake","GLOBAL",0)
  Range(LastTrigger,9)
THEN
  RESPONSE #100
    DisplayString(Myself,23184)  // ~An ornate gong. The gong mallet is missing.~
END

IF
  Clicked([ANYONE])
  Global("Awake","GLOBAL",1)
  Range(LastTrigger,9)
THEN
  RESPONSE #100
    DisplayString(Myself,23188)  // ~You have no further need of the gong.~
END

IF
  Clicked([ANYONE])
  !Range(LastTrigger,9)
THEN
  RESPONSE #100
    DisplayString(Myself,23565)  // ~You are too far away to operate that device.~
END

