IF
  See(NearestEnemyOf(Myself))
  HaveSpell(WIZARD_GHOST_ARMOR)
THEN
  RESPONSE #100
    Spell(Myself,WIZARD_GHOST_ARMOR)
END

IF
  See(NearestEnemyOf(Myself))
  HaveSpell(WIZARD_STINKING_CLOUD)
  !Range(NearestEnemyOf(Myself),12)
  See([PC.0.0.CLERIC])
THEN
  RESPONSE #100
    Spell([PC.0.0.CLERIC],WIZARD_STINKING_CLOUD)
END

