IF
  Detect([PC])
  See([ENEMY])
THEN
  RESPONSE #100
    SetInterrupt(FALSE)
    Wait(1)
    MoveToObject(LastSeenBy(Myself))
    ReallyForceSpell(LastSeenBy(Myself),WIZARD_DISINTEGRATE2_IGNORE_RESISTANCE)
    EscapeArea()
END

IF
  Detect([PC])
  !See([ENEMY])
THEN
  RESPONSE #100
    EscapeArea()
END

