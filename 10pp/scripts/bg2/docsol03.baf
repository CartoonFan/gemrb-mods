IF
  See([PC])
  Global("GuardSeesPC","LOCALS",0)
THEN
  RESPONSE #100
    StartDialogNoSet([PC])
    SetGlobalTimer("GuardSeesAgain","GLOBAL",80)
END

IF
  See([PC])
  GlobalGT("GuardSeesPC","LOCALS",0)
  GlobalLT("GuardSeesPC","LOCALS",4)
  GlobalTimerExpired("GuardSeesAgain","GLOBAL")
THEN
  RESPONSE #100
    StartDialogNoSet([PC])
    SetGlobalTimer("GuardSeesAgain","GLOBAL",80)
END

