IF
  See([PC])
  NumberOfTimesTalkedTo(0)
  Global("sguard3yell","GLOBAL",0)
THEN
  RESPONSE #100
    StartDialogNoSet([PC])
END

IF
  GlobalGT("AnomenSaerk","GLOBAL",0)
THEN
  RESPONSE #100
    Kill(Myself)
END

IF
  GlobalTimerExpired("SaerkGuards","GLOBAL")
  Allegiance(Myself,NEUTRAL)
THEN
  RESPONSE #100
    Enemy()
END

