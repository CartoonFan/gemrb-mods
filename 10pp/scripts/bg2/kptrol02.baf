IF
  Global("Move","LOCALS",0)
  See([PC])
THEN
  RESPONSE #100
    SetGlobal("Move","LOCALS",1)
END

IF
  GlobalTimerExpired("TrollsDead","AR1300")
THEN
  RESPONSE #100
    Kill(Myself)
END

IF
  !See("kpsold04")  // ~de'Arnise Guard~
  !Dead("kpsold04")  // ~de'Arnise Guard~
  Global("Move","LOCALS",1)
THEN
  RESPONSE #100
    AttackReevaluate("kpsold04",45)
END

