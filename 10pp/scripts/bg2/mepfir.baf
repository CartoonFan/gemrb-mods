IF
  See(NearestEnemyOf(Myself))
  Global("FIREMEPHIT","LOCALS",0)
THEN
  RESPONSE #100
    ForceSpell(NearestEnemyOf(Myself),0)
    IncrementGlobal("FIREMEPHIT","LOCALS",1)
    Wait(2)
    ForceSpell(NearestEnemyOf(Myself),MEPHIT_FLAME_JET)
    AttackOneRound(NearestEnemyOf(Myself))
END

IF
  Delay(8)
  See(NearestEnemyOf(Myself))
  GlobalLT("FIREMEPHIT","LOCALS",3)
  !Range(NearestEnemyOf(Myself),8)
THEN
  RESPONSE #100
    ForceSpell(NearestEnemyOf(Myself),MEPHIT_FLAME_JET)
    IncrementGlobal("FIREMEPHIT","LOCALS",1)
    AttackOneRound(NearestEnemyOf(Myself))
END

IF
  See(NearestEnemyOf(Myself))
  GlobalLT("FIREMEPHIT","LOCALS",3)
  Range(NearestEnemyOf(Myself),4)
THEN
  RESPONSE #100
    ForceSpell(NearestEnemyOf(Myself),MEPHIT_FLAME_FAN)
    IncrementGlobal("FIREMEPHIT","LOCALS",1)
    AttackOneRound(NearestEnemyOf(Myself))
END

IF
  See(NearestEnemyOf(Myself))
THEN
  RESPONSE #100
    EquipMostDamagingMelee()
    AttackReevaluate(NearestEnemyOf(Myself),30)
END

