    RandomWalk()
END

IF
  NumDead("uddrow37",4)
  Global("duelStarts","AR2202",1)
  Global("healed","LOCALS",0)
THEN
  RESPONSE #100
    SetGlobal("healed","LOCALS",1)
    ApplySpell(Myself,HEAL_NO_VISUAL)
    Wait(1)
END

