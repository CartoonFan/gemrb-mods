THEN
  RESPONSE #100
    ApplySpell(Myself,HEAL_NO_VISUAL)
END

IF
  NumDead("uddrow37",4)
  Global("duelStarts","AR2202",1)
  Delay(1)
THEN
  RESPONSE #100
    StartCutSceneMode()
    CreateVisualEffectObject("SPDIMNDR",Myself)
    JumpToPoint([673.1069])
    CreateVisualEffect("SPDIMNDR",[673.1069])
    MoveViewPoint([673.1069],INSTANT)
    Wait(5)
    StartDialogNoSet(Player1)
END

