IF
  OR(2)
    See("AMBOY01")  // ~Boy~
    See("AMGIRL01")  // ~Girl~
  Range(LastSeenBy(Myself),10)
  !GlobalTimerNotExpired("GetLostKid","GLOBAL")
  OnScreen(Myself)
THEN
  RESPONSE #100
    SetGlobalTimer("GetLostKid","GLOBAL",60)
    FaceObject(LastSeenBy(Myself))
    DisplayStringHead(Myself,71548)  // ~Get lost, brat!~
    ActionOverride(LastSeenBy(Myself),SetInterrupt(TRUE))
    DisplayStringHead(LastSeenBy(Myself),2912)  // ~Eek!~ [AERIE58]
    ActionOverride(LastSeenBy(Myself),RunAwayFrom([0.0.0.FIGHTER],60))
END

