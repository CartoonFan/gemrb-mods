IF
  OR(2)
    GlobalGT("Enclave","GLOBAL",1)
    Allegiance(Myself,ENEMY)
  Global("AmMercEnemy","GLOBAL",0)
THEN
  RESPONSE #100
    SetGlobal("AmMercEnemy","GLOBAL",1)
END

IF
  !Allegiance(Myself,ENEMY)
  Global("AmMercEnemy","GLOBAL",1)
THEN
  RESPONSE #100
    Enemy()
END

