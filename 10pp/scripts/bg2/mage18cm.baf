IF
  See(NearestEnemyOf(Myself))
  Global("MISLEDSCRIPT","LOCALS",0)
THEN
  RESPONSE #100
    ForceSpell(NearestEnemyOf(Myself),WIZARD_CHAOS_VISUALS_ONLY)
    Wait(4)
    SetGlobal("MISLEDSCRIPT","LOCALS",1)
END

