IF
  See([PC])
  !Range([PC],5)
  Global("BatChange","LOCALS",0)
THEN
  RESPONSE #100
    MoveToObject([PC])
END

IF
  See([PC])
  Range([PC],5)
  Global("BatChange","LOCALS",0)
THEN
  RESPONSE #100
    SetGlobal("BatChange","LOCALS",1)
    CreateVisualEffect("SPCLOUD3",[932.1239])
    ReallyForceSpell(Myself,VAMPIRE_FORM_CHANGE)
END

