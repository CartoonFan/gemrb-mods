IF
  Global("HendakReleased","AR0406",2)
  Allegiance(Myself,NEUTRAL)
THEN
  RESPONSE #100
    Enemy()
END

IF
  TrapTriggered([ANYONE])
THEN
  RESPONSE #100
    SetGlobal("BackRoomTrap","GLOBAL",1)
END

IF
  See([PC])
  Global("BackRoomTrap","GLOBAL",1)
  Allegiance(Myself,NEUTRAL)
THEN
  RESPONSE #100
    StartDialogNoSet([PC])
END

