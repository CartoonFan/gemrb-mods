IF
  See(NearestEnemyOf(Myself))
  HPPercentLT(Myself,20)
  Range(NearestEnemyOf(Myself),5)
THEN
  RESPONSE #100
    Shout(83)
    RunAwayFrom(NearestEnemyOf(Myself),45)
END

