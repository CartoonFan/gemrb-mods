IF
  Detect([PC])
  !GlobalTimerNotExpired("TalkTimer","LOCALS")
THEN
  RESPONSE #50
    SetGlobalTimer("TalkTimer","LOCALS",5)
  RESPONSE #50
    FaceObject(LastSeenBy(Myself))
    SetGlobalTimer("TalkTimer","LOCALS",10)
    DisplayStringHead(Myself,71203)  // ~Are you looking for a good time?~
END

