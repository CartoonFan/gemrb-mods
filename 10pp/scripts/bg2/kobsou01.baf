IF
  GlobalGT("KOBAMP_N","LOCALS",5)
  Detect(NearestEnemyOf(Myself))
THEN
  RESPONSE #100
    ReallyForceSpell(NearestEnemyOf(Myself),WIZARD_CHAIN_LIGHTNING)
    IncrementGlobal("KOBAMP_N","LOCALS",-4)
END

IF
  Detect(NearestEnemyOf(Myself))
