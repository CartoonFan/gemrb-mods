IF
  Clicked([ANYONE])
  !PartyHasItem("misc8w")  // ~Opal Stone~
  !PartyHasItem("misc8x")  // ~Ruby Stone~
  !PartyHasItem("misc8y")  // ~Sapphire Stone~
  Range(LastTrigger,10)
  GlobalLT("asylumUsedPortal","GLOBAL",3)
THEN
  RESPONSE #100
    DisplayString(Myself,48031)  // ~A flat, emotionless voice whispers in your head: 'Three bright stones shall be the key. When the Portal opens, none can say whether it is your doom or your salvation that shall be put forth...'~
END

IF
  Clicked([ANYONE])
  GlobalGT("asylumUsedPortal","GLOBAL",2)
THEN
  RESPONSE #100
    TriggerActivation("ppPortal",FALSE)
END

IF
  Clicked([ANYONE])
  Range(LastTrigger,10)
  PartyHasItem("misc8w")  // ~Opal Stone~
THEN
  RESPONSE #100
    TakePartyItem("misc8w")
    DestroyItem("misc8w")  // ~Opal Stone~
    DisplayString(Myself,29200)  // ~The portal opens and a wave of pure fear washes over you. Icy tendrils of power grip your skull and your vision swims. Something steps through the portal.~
    IncrementGlobal("asylumUsedPortal","GLOBAL",1)
    ReallyForceSpell(Myself,SUMMON_DEATH_KNIGHT)
END

IF
  Clicked([ANYONE])
  Range(LastTrigger,10)
  PartyHasItem("misc8x")  // ~Ruby Stone~
THEN
  RESPONSE #100
    TakePartyItem("misc8x")
    DestroyItem("misc8x")  // ~Ruby Stone~
    DisplayString(Myself,29201)  // ~The smell of sulfur assails your nostrils as the portal opens. A gigantic claw reaches out and grips the edge of the portal. The demon pulls itself through and attacks.~
    IncrementGlobal("asylumUsedPortal","GLOBAL",1)
    ReallyForceSpell(Myself,SUMMON_PIT_FIEND)
END

IF
  Clicked([ANYONE])
  Range(LastTrigger,10)
  PartyHasItem("misc8y")  // ~Sapphire Stone~
THEN
  RESPONSE #100
    TakePartyItem("misc8y")
    DestroyItem("misc8y")  // ~Sapphire Stone~
    DisplayString(Myself,29641)  // ~With a surge of magical energy, a djinn appears.~
    IncrementGlobal("asylumUsedPortal","GLOBAL",1)
    ForceSpellPoint([236.494],SUMMON_DJINN_TRAP)
END

IF
  Clicked([ANYONE])
  !Range(LastTrigger,10)
THEN
  RESPONSE #100
    DisplayString(Myself,14702)  // ~You are too far away to use that.~
END

