IF
  Clicked([ANYONE])
  Range(LastTrigger,12)
  Global("WheelCanTurnFinalSeal","GLOBAL",1)
THEN
  RESPONSE #100
    StartCutSceneMode()
    DisplayString(Myself,70895)  // ~You turn the wheel and the portal is opened.~
    SetGlobal("WheelCanTurnFinalSeal","GLOBAL",2)
    TriggerActivation("FinalSealInfo",FALSE)
    EraseJournalEntry(63827)  // ~Unlocking the Final SealI will have to prove myself worthy in mind, heart and spirit before I can unlock the Final Seal which guards the stairs to the next level of the dungeon.  ~
    EraseJournalEntry(63832)  // ~Unlocking the Final SealI have solved the puzzle of the colored globes, and proved myself worthy in mind.  However, I suspect I must possess all three keys - heart, mind and spirit - before the Final Seal can be unlocked.~
    EraseJournalEntry(63833)  // ~Unlocking the Final SealBy running the gauntlet, I have proved my perserverance, my courage and the wisdom of my heart.  However, I suspect I must possess all three keys - heart, mind and spirit - before the Final Seal can be unlocked.~
    EraseJournalEntry(63836)  // ~Unlocking the Final SealI have completed the challenge of the Eternal Warrior, and have proved the worth of my spirit.  However, I suspect I must possess all three keys - heart, mind and spirit - before the Final Seal can be unlocked.~
    AddXP2DA("Plot05B")
    AddJournalEntry(63837,QUEST_DONE)
    AmbientActivate("AMB_FinalSeal",TRUE)
    PlaySound("EFF_M38")
    Wait(2)
    SmallWait(5)
    SoundActivate("SndExitPortal",TRUE)
    StaticSequence("AMB_FinalSeal",1)
    TriggerActivation("FinalSeal",TRUE)
    EndCutSceneMode()
END

IF
  Clicked([ANYONE])
  Range(LastTrigger,12)
  Global("WheelCanTurnFinalSeal","GLOBAL",0)
THEN
  RESPONSE #100
    DisplayString(Myself,70909)  // ~This wheel opens the Final Seal but cannot be turned until all 3 keys are found and used to unlock the Seal.~
END

IF
  Clicked([ANYONE])
  Range(LastTrigger,12)
  Global("WheelCanTurnFinalSeal","GLOBAL",2)
THEN
  RESPONSE #100
    DisplayString(Myself,70896)  // ~There is nothing more that you can do with this.~
END

IF
  Clicked([ANYONE])
  !Range(LastTrigger,12)
THEN
  RESPONSE #100
    DisplayString(Myself,14702)  // ~You are too far away to use that.~
END

