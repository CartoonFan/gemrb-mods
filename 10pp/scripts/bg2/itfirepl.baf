IF
  Clicked([ANYONE])
  Range(LastTrigger,10)
  Global("LightTheFire","GLOBAL",0)
  OR(2)
    Global("Fireplace","AR3001",0)
    !PartyHasItem("PLOT01L")  // ~Tinderbox~
THEN
  RESPONSE #100
    SetGlobal("Fireplace","AR3001",1)
    DisplayString(Myself,62383)  // ~The soot blackened stones of this ancient fireplace are evidence that it was once well used.  The hearth is undamaged, and the fire could possibly be lit again if the proper tinderbox could be found.~
END

IF
  Clicked([ANYONE])
  Range(LastTrigger,10)
  Global("Fireplace","AR3001",1)
  PartyHasItem("PLOT01L")  // ~Tinderbox~
THEN
  RESPONSE #100
    StartCutSceneMode()
    DisplayString(Myself,62384)  // ~Once lit with the tinderbox, the fireplace crackles with dancing flames which provide a cheery glow to the kitchen, and the entire room is warmed by the heat from the lively blaze.~
    TakePartyItem("PLOT01L")
    AddXP2DA("PLOT4C")
    SetGlobal("LightTheFire","GLOBAL",1)
    SoundActivate("FireStart",TRUE)
    Wait(1)
    SoundActivate("FireStart",FALSE)
    SoundActivate("Scriptedfire",TRUE)
    AmbientActivate("AM3001D",TRUE)
    EndCutSceneMode()
END

IF
  Clicked([ANYONE])
  Range(LastTrigger,10)
  Global("LightTheFire","GLOBAL",1)
THEN
  RESPONSE #100
    DisplayString(Myself,62384)  // ~Once lit with the tinderbox, the fireplace crackles with dancing flames which provide a cheery glow to the kitchen, and the entire room is warmed by the heat from the lively blaze.~
END

IF
  Clicked([ANYONE])
  !Range(LastTrigger,10)
THEN
  RESPONSE #100
    DisplayString(Myself,14702)  // ~You are too far away to use that.~
END

