IF
  See(NearestEnemyOf(Myself))
  Global("DUSTMEPHIT","LOCALS",0)
  !Range(NearestEnemyOf(Myself),12)
THEN
  RESPONSE #100
    ForceSpell(NearestEnemyOf(Myself),MEPHIT_GLASS_DUST)
    IncrementGlobal("DUSTMEPHIT","LOCALS",1)
    AttackOneRound(NearestEnemyOf(Myself))
    AttackOneRound(NearestEnemyOf(Myself))
END

IF
  Delay(10)
  See(NearestEnemyOf(Myself))
  GlobalLT("DUSTMEPHIT","LOCALS",3)
THEN
  RESPONSE #30
    ForceSpell(NearestEnemyOf(Myself),MEPHIT_GLASS_DUST)
    IncrementGlobal("DUSTMEPHIT","LOCALS",1)
    AttackOneRound(NearestEnemyOf(Myself))
    AttackOneRound(NearestEnemyOf(Myself))
  RESPONSE #30
    ForceSpell(SecondNearestEnemyOf(Myself),MEPHIT_GLASS_DUST)
    IncrementGlobal("DUSTMEPHIT","LOCALS",1)
    AttackOneRound(NearestEnemyOf(Myself))
    AttackOneRound(NearestEnemyOf(Myself))
  RESPONSE #30
    ForceSpell(ThirdNearestEnemyOf(Myself),MEPHIT_GLASS_DUST)
    IncrementGlobal("DUSTMEPHIT","LOCALS",1)
    AttackOneRound(NearestEnemyOf(Myself))
    AttackOneRound(NearestEnemyOf(Myself))
END

IF
  See(NearestEnemyOf(Myself))
THEN
  RESPONSE #100
    EquipMostDamagingMelee()
    AttackReevaluate(NearestEnemyOf(Myself),30)
END

