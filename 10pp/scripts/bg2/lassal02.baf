IF
  Die()
THEN
  RESPONSE #100
    ReallyForceSpellDead(Myself,LASSAL_MIST_CHANGE)
END

IF
  OR(4)
    Global("Move","LOCALS",0)
    Global("Move","LOCALS",2)
    Global("Move","LOCALS",4)
    Global("Move","LOCALS",6)
  Detect([PC])
THEN
  RESPONSE #100
    IncrementGlobal("Move","LOCALS",1)
    StartDialogNoSet(LastSeenBy(Myself))
END

IF
  Global("Move","LOCALS",1)
THEN
  RESPONSE #100
    DialogueInterrupt(FALSE)
    ForceSpellPoint([1413.621],WIZARD_DIMENSION_DOOR)
    Wait(3)
    IncrementGlobal("Move","LOCALS",1)
    DialogueInterrupt(TRUE)
END

IF
  Global("Move","LOCALS",3)
THEN
  RESPONSE #100
    DialogueInterrupt(FALSE)
    IncrementGlobal("Move","LOCALS",1)
    OpenDoor("DOOR01")
    DialogueInterrupt(TRUE)
    EscapeAreaMove("AR0803",1703,195,2)
END

IF
  Global("Move","LOCALS",5)
THEN
  RESPONSE #100
    StartCutSceneMode()
    IncrementGlobal("Move","LOCALS",1)
    ReallyForceSpell(Myself,RED_EFFECT)
    Wait(1)
    DestroyItem("MINHP1")  // <Invalid Strref -1>
    EndCutSceneMode()
    MoveBetweenAreas("AR0801",[3326.312],2)
END

