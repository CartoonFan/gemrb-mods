IF
  See(NearestEnemyOf(Myself))
  HitBy([ANYONE],CRUSHING)
THEN
  RESPONSE #10
    ForceSpell(Myself,GAROCK_TELEPORT)
    JumpToPoint([870.2384])
  RESPONSE #10
    ForceSpell(Myself,GAROCK_TELEPORT)
    JumpToPoint([1125.2090])
END

IF
  HPPercentLT(Myself,50)
  HasItem("POTN55",Myself)  // ~Potion of Superior Healing~
THEN
  RESPONSE #100
    DisplayStringHead(Myself,46150)  // ~quaffs a potion~
    UseItem("POTN55",Myself)  // ~Potion of Superior Healing~
END

IF
  See(NearestEnemyOf(Myself))
  HaveSpell(WARRIOR_POWER_ATTACK)
  Global("GarockPowerAttack","LOCALS",0)
THEN
  RESPONSE #100
    ForceSpell(Myself,WARRIOR_POWER_ATTACK)
    AttackReevaluate(NearestEnemyOf(Myself),15)
    SetGlobal("GarockPowerAttack","LOCALS",1)
END

