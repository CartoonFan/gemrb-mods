IF
  Detect([PC])
  Global("C6EricHelp","GLOBAL",0)
THEN
  RESPONSE #100
    SetGlobal("C6EricHelp","GLOBAL",1)
    DisplayStringHead(Myself,53485)  // ~The paladins of the Order of the Radiant Heart are here to fight at your side, <CHARNAME>!  Glorious shall our victory be if this great evil can be brought to an end!~
END

IF
  AttackedBy([GOODCUTOFF],DEFAULT)
  Global("AttackedOrder","GLOBAL",0)
THEN
  RESPONSE #100
    SetGlobal("AttackedOrder","GLOBAL",1)
END

IF
  Global("AttackedOrder","GLOBAL",1)
  !See([PC])
THEN
  RESPONSE #100
    MoveToObject(Player1)
END

IF
  Global("AttackedOrder","GLOBAL",1)
  See([PC])
THEN
  RESPONSE #100
    StartDialogNoSet([PC])
END

IF
  Global("AttackedOrder","GLOBAL",2)
THEN
  RESPONSE #100
    EscapeArea()
END

IF
  OnCreation()
THEN
  RESPONSE #100
    DialogueInterrupt(FALSE)
END

IF
  AreaCheck("AR0808")
  OpenState("DOOR01",TRUE)  // DOOR01
  !Detect([PC])
THEN
  RESPONSE #100
    DestroySelf()
END

IF
  AreaCheck("AR0808")
  OpenState("DOOR01",TRUE)  // DOOR01
  Global("MoveToBodhi","LOCALS",0)
THEN
  RESPONSE #100
    MoveToObjectNoInterrupt("DOOR01")
    SetGlobal("MoveToBodhi","LOCALS",1)
END

IF
  AreaCheck("AR0808")
  OpenState("DOOR01",TRUE)  // DOOR01
  Range("Tran0809",8)  // Tran0809
THEN
  RESPONSE #100
    EscapeArea()
END

IF
  !Range([PC],4)
  ActionListEmpty()
THEN
  RESPONSE #100
    MoveToObject(Player1)
END

IF
  Dead("c6del")  // ~Del~
  Dead("c6valen")  // ~Valen~
  Global("Speak","LOCALS",0)
THEN
  RESPONSE #100
    SetGlobal("Speak","LOCALS",1)
    DisplayStringHead(Myself,54876)  // ~My knights, you may return to the Order house. <CHARNAME> and I shall go to face Bodhi.~
END

IF
  StateCheck(Player1,STATE_CHARMED)
  Global("C6Player1Charmed","GLOBAL",0)
  OR(2)
    !See("c6drizz")  // ~Drizzt~
    Dead("c6drizz")  // ~Drizzt~
THEN
  RESPONSE #100
    SetGlobal("C6Player1Charmed","GLOBAL",1)
    DisplayStringHead(Myself,55525)  // ~The vampire has turned <CHARNAME>! Now <PRO_HESHE> attacks!~
END

IF
  Dead("c6bodhi")  // ~Bodhi~
  CombatCounter(0)
  Global("C6BodhiDead","AR0809",0)
  See([PC])
  OR(2)
    !See("c6drizz")  // ~Drizzt~
    Dead("c6drizz")  // ~Drizzt~
THEN
  RESPONSE #100
    SetGlobal("C6BodhiDead","AR0809",1)
    DisplayStringHead(Myself,55918)  // ~It was a grand battle, friend. I must return to my duties elsewhere. I am proud to have fought this evil with you.~
END

IF
  Dead("c6bodhi")  // ~Bodhi~
  CombatCounter(0)
THEN
  RESPONSE #100
    EscapeArea()
END

