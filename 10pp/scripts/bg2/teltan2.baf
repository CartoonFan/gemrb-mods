IF
  See(NearestEnemyOf(Myself))
  Range(NearestEnemyOf(Myself),10)
  GlobalLT("FireSummon","LOCALS",5)
THEN
  RESPONSE #100
    RunAwayFrom(NearestEnemyOf(Myself),30)
END

IF
  See(NearestEnemyOf(Myself))
  Global("FireSummon","LOCALS",0)
THEN
  RESPONSE #100
    SetGlobalTimer("SummonFire","LOCALS",5)
    IncrementGlobal("FireSummon","LOCALS",1)
    ForceSpell(Myself,SUMMON_ICE_SALAMANDER)
END

IF
  !GlobalTimerNotExpired("SummonFire","LOCALS")
  GlobalLT("FireSummon","LOCALS",5)
  GlobalGT("FireSummon","LOCALS",0)
  See(NearestEnemyOf(Myself))
THEN
  RESPONSE #100
    SetGlobalTimer("SummonFire","LOCALS",5)
    IncrementGlobal("FireSummon","LOCALS",1)
    ForceSpell(Myself,SUMMON_ICE_SALAMANDER)
END

IF
  See(NearestEnemyOf(Myself))
  !GlobalLT("FireSummon","LOCALS",5)
  Global("Prep","LOCALS",0)
THEN
  RESPONSE #100
    SetGlobal("Prep","LOCALS",1)
    ForceSpell(Myself,WIZARD_FIRE_SHIELD_BLUE)
    ApplySpell(Myself,WIZARD_MANTLE)
END

IF
  See(NearestEnemyOf(Myself))
  !GlobalLT("FireSummon","LOCALS",5)
  Global("Prep","LOCALS",1)
THEN
  RESPONSE #100
    AttackReevaluate(NearestEnemyOf(Myself),45)
  RESPONSE #100
    SpellNoDec(NearestEnemyOf(Myself),WIZARD_CONE_OF_COLD)
END

