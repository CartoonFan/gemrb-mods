IF
  Global("PaladinPlot","GLOBAL",1)
  !See(Player1)
THEN
  RESPONSE #100
    MoveToObject(Player1)
END

IF
  Global("PaladinPlot","GLOBAL",1)
  Global("TalkedAlynar","GLOBAL",0)
  See(Player1)
THEN
  RESPONSE #100
    StartDialogNoSet(Player1)
    SetGlobal("TalkedAlynar","GLOBAL",1)
END

IF
  GlobalGT("PaladinPlot","GLOBAL",1)
THEN
  RESPONSE #100
    EscapeArea()
END

