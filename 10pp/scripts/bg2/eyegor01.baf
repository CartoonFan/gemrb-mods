  Range(NearestEnemyOf(Myself),5)
  Delay(12)
  !StateCheck(NearestEnemyOf(Myself),STATE_STONE_DEATH)
THEN
  RESPONSE #50
    RunAwayFrom(NearestEnemyOf(Myself),45)
    AttackReevaluate(NearestEnemyOf(Myself),15)
