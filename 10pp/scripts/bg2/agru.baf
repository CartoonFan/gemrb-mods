IF
  Detect([PC])
  NumberOfTimesTalkedTo(0)
  Range(LastSeenBy(Myself),10)
THEN
  RESPONSE #100
    StartDialogNoSet(LastSeenBy(Myself))
END

IF
  Detect([PC])
  PartyHasItem("MISC5A")  // ~Rift Device Part~
  Range(LastSeenBy(Myself),10)
  Global("AgruTalk","LOCALS",0)
THEN
  RESPONSE #100
    SetGlobal("AgruTalk","LOCALS",1)
    StartDialogNoSet(LastSeenBy(Myself))
END

IF
  Detect([PC])
  PartyHasItem("MISC5Z")  // ~Rift Device~
  Range(LastSeenBy(Myself),10)
  Global("AgruTalk","LOCALS",1)
THEN
  RESPONSE #100
    SetGlobal("AgruTalk","LOCALS",2)
    StartDialogNoSet(LastSeenBy(Myself))
END

