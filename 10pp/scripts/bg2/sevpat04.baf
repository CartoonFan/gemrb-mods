IF
  See(NearestEnemyOf(Myself))
  Global("berserk","LOCALS",0)
THEN
  RESPONSE #100
    SetGlobal("berserk","LOCALS",1)
    DisplayString(Myself,14036)  // ~Berserk~
    SpellNoDec(Myself,BARBARIAN_RAGE)
END

IF
  Global("RiatavinFight","GLOBAL",1)
  Allegiance(Myself,NEUTRAL)
THEN
  RESPONSE #100
    Enemy()
END

IF
  OR(2)
    AttackedBy([GOODCUTOFF],DEFAULT)
    HitBy([GOODCUTOFF],CRUSHING)
  Global("RiatavinFight","GLOBAL",0)
THEN
  RESPONSE #100
    SetGlobal("RiatavinFight","GLOBAL",1)
    Enemy()
END

