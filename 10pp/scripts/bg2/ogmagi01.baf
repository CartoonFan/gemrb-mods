IF
  !StateCheck(Myself,STATE_INVISIBLE)
  !GlobalTimerNotExpired("Invis","LOCALS")
THEN
  RESPONSE #100
    ApplySpell(Myself,WIZARD_INVISIBILITY)
END

IF
  See([PC])
  HaveSpell(WIZARD_DIRE_CHARM)
THEN
  RESPONSE #100
    Spell([PC],WIZARD_DIRE_CHARM)
    Continue()
END

IF
  See(NearestEnemyOf(Myself))
  HaveSpell(WIZARD_CONE_OF_COLD)
THEN
  RESPONSE #100
    Spell(NearestEnemyOf(Myself),WIZARD_CONE_OF_COLD)
    Continue()
END

IF
  See(NearestEnemyOf(Myself))
  !HasBounceEffects(NearestEnemyOf(Myself))
THEN
  RESPONSE #100
    SpellNoDec(NearestEnemyOf(Myself),WIZARD_MAGIC_MISSILE)
    Continue()
  RESPONSE #100
    SpellNoDec(NearestEnemyOf(Myself),WIZARD_POWER_WORD_SLEEP)
    Continue()
  RESPONSE #100
    SpellNoDec(NearestEnemyOf(Myself),WIZARD_FLAME_ARROW)
    Continue()
END

