IF
  Detect([GOODCUTOFF])
  Global("Display","LOCALS",0)
THEN
  RESPONSE #100
    SetGlobal("Display","LOCALS",1)
    DisplayStringHead(Myself,72792)  // ~Who calls Cryonax, Prince of Ice!~
    CreateCreatureObjectEffect("SALGRICE","ICRMPARI",Myself)
    CreateCreatureObjectEffect("SALGRICE","ICRMPARI",Myself)
    CreateCreatureObjectEffect("TROLIC03","ICRMPARI",Myself)
    CreateCreatureObjectEffect("TROLIC03","ICRMPARI",Myself)
END

IF
  Global("Display","LOCALS",1)
  Allegiance(Myself,ENEMY)
  !Detect([GOODCUTOFF])
THEN
  RESPONSE #100
    MoveToObject(Player1)
END

IF
  See(NearestEnemyOf(Myself))
  Global("CastConeOfCold","LOCALS",0)
  !GlobalTimerNotExpired("ConeOfColdTimer","LOCALS")
THEN
  RESPONSE #100
    ForceSpellRES("spcryo01",NearestEnemyOf(Myself))  // ~Cone of Cold~
    DisplayStringHead(Myself,72793)  // ~Feel the wrath of Cryonax!~
    SetGlobal("CastConeOfCold","LOCALS",1)
END

IF
  See(NearestEnemyOf(Myself))
THEN
  RESPONSE #100
    SetGlobal("CastConeOfCold","LOCALS",0)
    SetGlobalTimer("ConeOfColdTimer","LOCALS",30)
    AttackReevaluate(NearestEnemyOf(Myself),120)
END

