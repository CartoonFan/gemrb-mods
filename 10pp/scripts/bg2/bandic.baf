IF
  NumDeadGT("Bandcap",4)
  Global("BanditsKilled","GLOBAL",0)
THEN
  RESPONSE #100
    ChangeEnemyAlly(Myself,NEUTRAL)
    Dialog([PC])
    SetGlobal("BanditsKilled","GLOBAL",1)
END

IF
  See(NearestEnemyOf(Myself))
  Global("BanditShout","GLOBAL",0)
THEN
  RESPONSE #100
    Shout(1)
    SetGlobal("BanditShout","GLOBAL",1)
END

