IF
  Global("BridgeOpen","AR0204",0)
  OpenState("Bridge01",FALSE)  // Bridge01
THEN
  RESPONSE #100
    OpenDoor("Bridge01")
END

IF
  Global("BridgeOpen","AR0204",1)
  OpenState("Bridge01",TRUE)  // Bridge01
THEN
  RESPONSE #100
    CloseDoor("Bridge01")
    TriggerActivation("BridgeGuardian",FALSE)
END

