IF
  Global("GlobesOn","AR3016",1)
  GlobalTimerExpired("Globe1Charged","AR3016")
  Range([GOODCUTOFF],6)
THEN
  RESPONSE #100
    SetGlobalTimer("Globe1Charged","AR3016",7)
    ForceSpell([GOODCUTOFF],TRAP_LIGHTNING_ORB1)
  RESPONSE #100
    SetGlobalTimer("Globe1Charged","AR3016",4)
    ForceSpell([GOODCUTOFF],TRAP_LIGHTNING_ORB1)
END

