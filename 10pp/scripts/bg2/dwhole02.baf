IF
  Clicked([ANYONE])
  Range(LastTrigger,10)
  PartyHasItem("miscA4")  // ~Potion of Squirrel Change~
  Global("hole2","AR2100",0)
THEN
  RESPONSE #100
    SetGlobal("hole2","AR2100",2)
    DisplayString(Myself,50838)  // ~You see a tiny hole, small enough for a small rodent.~
END

IF
  Clicked([ANYONE])
  Range(LastTrigger,10)
  PartyHasItem("miscA4")  // ~Potion of Squirrel Change~
  Global("hole2","AR2100",2)
THEN
  RESPONSE #100
    SetGlobal("hole2","AR2100",3)
    DisplayString(Myself,51939)  // ~You drink the last of the potion, transform into a squirrel and enter the tunnel.~
    Wait(1)
    ActionOverride(LastTrigger,ApplySpell(Myself,UNDER_SQUIRREL))
    Wait(5)
    FadeToColor([20.0],0)
    Wait(2)
    TakePartyItem("miscA4")
    DestroyItem("miscA4")  // ~Potion of Squirrel Change~
    MoveViewPoint([240.3118],100)
    ActionOverride(LastTrigger,JumpToPoint([240.3118]))
    Wait(2)
    ActionOverride(LastTrigger,ApplySpell(Myself,UNDER_NORM))
    FadeFromColor([20.0],0)
END

IF
  Clicked([ANYONE])
  !Range(LastTrigger,10)
THEN
  RESPONSE #100
    DisplayString(Myself,14702)  // ~You are too far away to use that.~
END

