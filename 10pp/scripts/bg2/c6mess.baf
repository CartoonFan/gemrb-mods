IF
  OR(3)
    Dead("c6bodhi")  // ~Bodhi~
    GlobalGT("ShadowFightBodhi","GLOBAL",0)
    Allegiance(Myself,ENEMY)
THEN
  RESPONSE #100
    EscapeArea()
END

IF
  !See([PC])
  NumberOfTimesTalkedTo(0)
THEN
  RESPONSE #100
    MoveToObject([PC])
END

IF
  See([PC])
  NumberOfTimesTalkedTo(0)
THEN
  RESPONSE #100
    Dialog([PC])
END

