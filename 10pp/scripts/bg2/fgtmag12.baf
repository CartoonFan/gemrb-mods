IF
  StateCheck(Myself,STATE_SILENCED)
THEN
  RESPONSE #100
    ForceSpell(Myself,WIZARD_VOCALIZE)
END

IF
  See(NearestEnemyOf(Myself))
  Global("prepspells","LOCALS",0)
THEN
  RESPONSE #100
    ApplySpell(Myself,WIZARD_STONE_SKIN)
    ApplySpell(Myself,WIZARD_GHOST_ARMOR)
    ApplySpell(Myself,WIZARD_FIRE_SHIELD_RED)
    ApplySpell(Myself,WIZARD_SPELL_DEFLECTION)
    ForceSpell(Myself,WIZARD_HASTE)
    SetGlobal("prepspells","LOCALS",1)
END

IF
  See(NearestEnemyOf(Myself))
  HPPercentLT(Myself,30)
  Global("prepspells","LOCALS",2)
THEN
  RESPONSE #100
    DisplayString(Myself,29736)  // ~Contingency - Stoneskin~
    ApplySpell(Myself,WIZARD_STONE_SKIN)
    SetGlobal("prepspells","LOCALS",3)
END

IF
  Detect(NearestEnemyOf(Myself))
  !Range(LastSeenBy(Myself),10)
  HaveSpell(WIZARD_FIREBALL)
THEN
  RESPONSE #100
    Spell(LastSeenBy(Myself),WIZARD_FIREBALL)
END

IF
  See(NearestEnemyOf(Myself))
  Global("prepspells","LOCALS",1)
THEN
  RESPONSE #100
    Spell(NearestEnemyOf(Myself),WIZARD_CHAIN_LIGHTNING)
    ApplySpell(Myself,WIZARD_TENSERS_TRANSFORMATION)
    SetGlobal("prepspells","LOCALS",2)
END

IF
  See(NearestEnemyOf(Myself))
THEN
  RESPONSE #100
    EquipMostDamagingMelee()
    AttackReevaluate(NearestEnemyOf(Myself),30)
END

