IF
  Die()
THEN
  RESPONSE #100
    Shout(151)
END

IF
  AttackedBy([GOODCUTOFF],DEFAULT)
  OR(3)
    Allegiance(Myself,GOODBUTBLUE)
    Allegiance(Myself,NEUTRAL)
    Allegiance(Myself,0)
THEN
  RESPONSE #100
    Shout(151)
    Enemy()
END

IF
  HitBy([GOODCUTOFF],CRUSHING)
THEN
  RESPONSE #100
    Shout(151)
    Continue()
END

IF
  See([GOODCUTOFF])
  Allegiance(Myself,ENEMY)
  ActionListEmpty()
THEN
  RESPONSE #100
    Shout(151)
    Continue()
END

IF
  Heard([ANYONE],151)
  InMyGroup(LastHeardBy(Myself))
  OR(2)
    Allegiance(Myself,GOODBUTBLUE)
    Allegiance(Myself,NEUTRAL)
THEN
  RESPONSE #100
    Enemy()
    Continue()
END

IF
  !Dead("sartro03")  // ~Orog~
  Allegiance(Myself,ENEMY)
  Global("Reinforce","AR5005",0)
THEN
  RESPONSE #100
    SetGlobal("Reinforce","AR5005",1)
    DisplayStringHead("sartro03",73240)  // ~Soldier, get some reinforcements!~
    Continue()
END

IF
  !Dead("sartro03")  // ~Orog~
  Global("Reinforce","AR5005",1)
THEN
  RESPONSE #100
    SetGlobal("Reinforce","AR5005",2)
    DisplayStringHead(Myself,73241)  // ~Yes sir!~
    Continue()
END

IF
  !Range("Tran5000b",5)  // Tran5000b
  Global("Reinforce","AR5005",2)
THEN
  RESPONSE #100
    DisplayStringHead(Myself,73241)  // ~Yes sir!~
    MoveToObject("Tran5000b")
    Continue()
END

IF
  Range("Tran5000b",5)  // Tran5000b
  Global("Reinforce","AR5005",2)
THEN
  RESPONSE #100
    SetGlobal("Reinforce","AR5005",3)
    SetGlobalTimer("ReinforceTimer","AR5005",8)
    EscapeArea()
END

IF
  Global("Reinforce","AR5005",3)
THEN
  RESPONSE #100
    EscapeArea()
END

IF
  GlobalGT("Reinforce","AR5005",0)
  GlobalLT("Reinforce","AR5005",3)
THEN
  RESPONSE #100
    NoAction()
END

