END

IF
  Detect([PC])
  Global("WaitressTalk","AR5003",2)
  !GlobalTimerNotExpired("WaitressTalkTimer","AR5003")
THEN
  RESPONSE #100
    SetGlobal("WaitressTalk","AR5003",0)
  RESPONSE #100
    FaceObject("sarbul06")
    DisplayStringHead(Myself,71396)  // ~Just leave me alone!~
    SetGlobal("WaitressTalk","AR5003",0)
    SetGlobalTimer("WaitressTalkTimer","AR5003",10)
