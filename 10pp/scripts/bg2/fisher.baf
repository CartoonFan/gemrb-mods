IF
  Global("KillFishermen","GLOBAL",1)
THEN
  RESPONSE #100
    DestroySelf()
END

IF
  AttackedBy([GOODCUTOFF],DEFAULT)
THEN
  RESPONSE #100
    SetGlobal("HostileFishermen","GLOBAL",1)
    Enemy()
END

IF
  Global("HostileFishermen","GLOBAL",1)
  Allegiance(Myself,NEUTRAL)
THEN
  RESPONSE #100
    Enemy()
END

