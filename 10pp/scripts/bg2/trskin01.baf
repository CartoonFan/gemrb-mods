IF
  Global("tannerplot2","GLOBAL",3)
  Global("Change","LOCALS",1)
  PartyHasItem("MISC79")  // ~Raissa's Skin~
THEN
  RESPONSE #100
    PlayDead(0)
    DialogueInterrupt(FALSE)
    MoveToObject([PC])
    TakePartyItem("MISC79")
    DestroyItem("MISC79")  // ~Raissa's Skin~
    SetGlobal("Change","LOCALS",2)
    CreateCreatureObject("TRSKIN3B",Myself,0,0,0)  // ~Rejiek Hidesman~
    ApplySpell(Myself,SKIN_DANCER_RESTORE)
    DialogueInterrupt(TRUE)
END

