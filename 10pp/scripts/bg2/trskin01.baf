IF
  OR(2)
    SpellCastOnMe([PC],CLERIC_LESSER_RESTORATION)
    SpellCastOnMe([PC],CLERIC_RESTORATION)
  Global("Restored","LOCALS",0)
THEN
  RESPONSE #100
    SetInterrupt(FALSE)
    SetGlobal("Restored","LOCALS",1)
    Wait(2)
    StartDialogNoSet([PC])
END

IF
  Global("tannerplot2","GLOBAL",2)
  Global("Change","LOCALS",0)
THEN
