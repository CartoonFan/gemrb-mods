IF
  OnCreation()
  Global("MelissanJob","GLOBAL",0)
  Global("SpawnMel","AR5007",0)
THEN
  RESPONSE #100
    ClearAllActions()
    StartCutSceneMode()
    SetGlobal("SpawnMel","AR5007",1)
    CreateCreatureObjectEffect("MEL01","SPDIMNDR",Player1)
    ActionOverride("mel01",DialogueInterrupt(TRUE))
    ActionOverride("mel01",FaceObject(Player1))
    Wait(3)
    ActionOverride("mel01",StartDialogNoSet(Player1))
END

