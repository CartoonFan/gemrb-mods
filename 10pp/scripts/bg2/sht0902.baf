IF
  AttackedBy([GOODCUTOFF],DEFAULT)
  Global("TempleShout0902","GLOBAL",0)
THEN
  RESPONSE #100
    SetGlobal("TempleShout0902","GLOBAL",1)
END

IF
  Global("TempleShout0902","GLOBAL",1)
  Allegiance(Myself,NEUTRAL)
THEN
  RESPONSE #100
    Enemy()
END

IF
  Allegiance(Myself,ENEMY)
  AreaCheck("AR0902")
  !See([PC])
THEN
  RESPONSE #100
    MoveToObject([PC])
END

