IF
  Allegiance(Myself,NEUTRAL)
  Global("MDEARTHHOSTILE","GLOBAL",0)
  See([PC])
  Delay(10)
THEN
  RESPONSE #100
    StartDialogNoSet([PC])
END

IF
  AttackedBy([GOODCUTOFF],DEFAULT)
  Allegiance(Myself,NEUTRAL)
THEN
  RESPONSE #100
    SetGlobal("MDEARTHHOSTILE","GLOBAL",1)
    Enemy()
END

IF
  Allegiance(Myself,NEUTRAL)
  Global("MDEARTHHOSTILE","GLOBAL",1)
THEN
  RESPONSE #100
    SetGlobal("MDEARTHHOSTILE","GLOBAL",1)
    Enemy()
END

