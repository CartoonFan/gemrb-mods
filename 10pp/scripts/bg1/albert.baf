IF
  See([PC])
  NumberOfTimesTalkedTo(0)
THEN
  RESPONSE #100
    Dialogue([PC])
END

IF
  See([PC])
  Global("Rufie","GLOBAL",2)
  Range("Rufie",3)  // ~Rufie~
THEN
  RESPONSE #100
    SetInterrupt(FALSE)
    Dialogue([PC])
    SetInterrupt(TRUE)
END

IF
  See([PC])
  Dead("Rufie")  // ~Rufie~
  !Global("Rufie","GLOBAL",3)
THEN
  RESPONSE #100
    Dialogue([PC])
END

