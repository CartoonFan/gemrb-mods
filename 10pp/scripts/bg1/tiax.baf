IF
  !UnselectableVariable(0)
  Global("Tiaxfight","GLOBAL",0)
THEN
  RESPONSE #100
    MakeUnselectable(0)
END

IF
  UnselectableVariable(0)
  See("Quayle")  // ~Quayle~
  Global("Tiaxfight","GLOBAL",1)
THEN
  RESPONSE #100
    MakeUnselectable(5000)
END

IF
  !UnselectableVariable(0)
  Dead("Quayle")  // ~Quayle~
  Global("Tiaxfight","GLOBAL",1)
THEN
  RESPONSE #100
    SetGlobal("Tiaxfight","GLOBAL",0)
    MakeUnselectable(0)
END

