IF
  Global("AttackThalantyr","GLOBAL",1)
THEN
  RESPONSE #100
    SetGlobal("Golem","GLOBAL",0)
    Enemy()
END

IF
  AttackedBy([ANYONE],DEFAULT)
  Allegiance(Myself,NEUTRAL)
THEN
  RESPONSE #100
    SetGlobal("Golem","GLOBAL",0)
    Enemy()
END

IF
  Global("Golem","GLOBAL",1)
  Allegiance(Myself,ENEMY)
THEN
  RESPONSE #100
    ChangeEnemyAlly(Myself,NEUTRAL)
END

