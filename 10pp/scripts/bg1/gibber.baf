IF
  HitBy([ANYONE],CRUSHING)
THEN
  RESPONSE #50
    Help()
    Attack(NearestEnemyOf(Myself))
  RESPONSE #50
    RunAwayFrom(NearestEnemyOf(Myself),75)
END

IF
  Help([0.0.GIBBERLING])
THEN
  RESPONSE #100
    Attack(NearestEnemyOf(LastHelp(Myself)))
END

IF
  See(NearestEnemyOf(Myself))
THEN
  RESPONSE #100
    Help()
    AttackReevaluate(NearestEnemyOf(Myself),30)
END

