IF
  AttackedBy([ANYONE],DEFAULT)
THEN
  RESPONSE #100
    Attack(LastAttackerOf(Myself))
END

IF
  See("Albert")  // ~Albert~
  Global("Rufie","GLOBAL",2)
THEN
  RESPONSE #100
    MoveToObject("Albert")
END

IF
  See([PC])
  PartyHasItem("MISC63")  // ~Chew Toy~
THEN
  RESPONSE #100
    SetGlobal("Rufie","GLOBAL",2)
    ChangeEnemyAlly(Myself,NEUTRAL)
    MoveToObject([PC])
END

IF
  See([PC])
  !PartyHasItem("MISC63")  // ~Chew Toy~
THEN
  RESPONSE #100
    SetGlobal("Rufie","GLOBAL",2)
    Enemy()
    Attack([PC])
END

