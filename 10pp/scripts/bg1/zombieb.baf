IF
  Die()
THEN
  RESPONSE #100
    SetGlobal("KilledZombie","GLOBAL",1)
END

IF
  Heard("Bassilus",1)  // Bassilus
THEN
  RESPONSE #100
    Shout(1)
    Enemy()
END

IF
  Heard("Bassilus",2)  // Bassilus
THEN
  RESPONSE #100
    Kill(Myself)
END

IF
  Heard("SkeletonB",1)  // SkeletonB
THEN
  RESPONSE #100
    Shout(1)
    Enemy()
END

IF
  Heard("SkeletonB",2)  // SkeletonB
THEN
  RESPONSE #100
    Shout(2)
    Kill(Myself)
END

IF
  Heard("ZombieB",1)  // ~Zombie~
THEN
  RESPONSE #100
    Shout(1)
    Enemy()
END

IF
  Heard("ZombieB",2)  // ~Zombie~
THEN
  RESPONSE #100
    Shout(2)
    Kill(Myself)
END

IF
  See(NearestEnemyOf(Myself))
THEN
  RESPONSE #100
    AttackReevaluate(NearestEnemyOf(Myself),15)
END

