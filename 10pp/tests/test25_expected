IF
  Detect([PC])
  HasItem("DECK",Player1)  // ~Deck of Many Things~
  Global("DeadPlayer1","LOCALS",0)
THEN
  RESPONSE #100
    AttackReevaluate(Player1,15)
    SetGlobal("DeadPlayer1","LOCALS",1)
END

