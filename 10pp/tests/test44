IF
	Global("#GBhaalHP1","GLOBAL",2)  
 	OR(2)
  	 NumInPartyLT(2)
 	 StateCheck(Player2,STATE_REALLY_DEAD)
	OR(2)
	 NumInPartyLT(3)
	 StateCheck(Player3,STATE_REALLY_DEAD)
	OR(2)
	 NumInPartyLT(4)
	 StateCheck(Player4,STATE_REALLY_DEAD)
	OR(2)
 	 NumInPartyLT(5)
 	 StateCheck(Player5,STATE_REALLY_DEAD)
 	OR(2)
  	 NumInPartyLT(6)
   	 StateCheck(Player6,STATE_REALLY_DEAD)
THEN
	RESPONSE #100
		SetInterrupt(FALSE)
    		ClearAllActions()
    		StartCutSceneMode()
		FadeToColor([40.0],0)
    		Wait(4)
		ActionOverride(Player1,MoveViewObject(Myself,INSTANT))
		FadeFromColor([40.0],0)
		Wait(4)
   		ActionOverride(Player1,SetPlayerSound(Myself,#0,DYING))
    		ActionOverride(Player1,ReallyForceSpellRES("#GFADE",Myself))   		
    		Wait(9)
    		FadeToColor([40.0],0)
    		Wait(3)
		SetGlobal("#GBhaalHP1","GLOBAL",0)
    		LoseGame() // ToBEx only
		SetInterrupt(TRUE)
END
